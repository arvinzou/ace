@import "../common/index.wxss";

.index{
    width: 100%;
    height: 100%;
    overflow: auto;
}

.head {
    padding: 0 30rpx;
}

.head .bottom-line {
    padding-top: 30rpx;
}

.head .title {
    font-size: 36rpx;
    font-weight: bold;
    color: rgba(34, 34, 34, 1);
}

.head .info {
    font-size: 26rpx;
    font-weight: 500;
    display: flex;
    align-items: center;
    margin-top: 20rpx;
}

.head .info image {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.head .info .name {
    color: rgba(66, 93, 174, 1);
    margin-right: 20rpx;
    max-width: 8em;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.head .info .dateTime {
    color: rgba(153, 153, 153, 1);
    margin-right: 20rpx;
}

.body {
    padding: 30rpx 0;
    font-size: 30rpx;
    font-weight: 500;
    color: rgba(102, 102, 102, 1);
}

.body .content {
    width: 690rpx;
    margin: auto;
}

.body .content view {
    margin-bottom: 20rpx;
    text-indent: 2em;
}

.body .content image {
    width: 100%;
    margin-bottom: 20rpx;
}

.foot{
    padding-bottom: 98rpx;
}

.foot .comments .comment {
    width: 690rpx;
    padding: 30rpx 0;
    margin: auto;
}

.foot .comments .comment .top {
    display: flex;
    margin-bottom: 30rpx;
}

.foot .comments .comment .top image {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.foot .comments .comment .top .name {
    font-size: 26rpx;
    font-weight: bold;
    color: rgba(102, 102, 102, 1);
}

.foot .comments .comment .top .time {
    font-size: 20rpx;
    font-weight: 500;
    color: rgba(153, 153, 153, 1);
}

.foot .comments .comment .bottom {
    padding-left: 90rpx;
    font-size: 28rpx;
    font-weight: 500;
    color: rgba(34, 34, 34, 1);
}

.commentBox {
    position: fixed;
    bottom: 0px;
    display: flex;
    align-items: center;
    padding:16rpx 30rpx;

}

.commentBox .pop {
    position: relative;
    font-size: 42rpx;
}
.commentBox .pop::first-letter{
    margin-right: 40rpx;
}

.commentBox .pop text {
    position: absolute;
    left: 22rpx;
    padding: 0 10rpx;
    height: 20rpx;
    background: rgba(246, 82, 70, 1);
    border-radius: 10rpx;
    font-size:14rpx;
    font-weight:bold;
    line-height: 20rpx;
    color:rgba(255,255,255,1);
}

.commentBox .input{
    height:68rpx;
    background:rgba(239,239,239,1);
    opacity:0.4;
    border-radius:34rpx;
    width: 500rpx;
    margin-right: 40rpx;
    font-size:26rpx;
    line-height: 68rpx;
    font-weight:500;
    color:rgba(102,102,102,1);
    padding:0 34rpx;
}

.model{
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    background:rgba(0,0,0,.4);
    z-index: 100;
}

.model .inner-model{
    width: 100%;
    height: 100%;
    position: relative;
    top: 0;
}

.model .box{
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    padding:40rpx 20rpx 20rpx;
}

.model .box::after{
    content: '';
    clear: both;
    display: block;
}

.model .box textarea{
    box-sizing: border-box;
    height: 180rpx;
    width: 100%;
    background:rgba(249,249,249,1);
    border-radius:6px;
    padding: 34rpx;
    margin-bottom: 20rpx;
}

.model .box .submit{
    width:138rpx;
    height:60rpx;
    float: right;
    line-height: 60rpx;
    text-align: center;
    background:rgba(255,153,6,1);
    border-radius:30rpx;
    font-size:34rpx;
    font-weight:bold;
    color:rgba(255,255,255,1);
    -webkit-appearance:none;
}
