@import "../common/index.wxss";

.index{
}

.head {
    padding: 0 30rpx;
}

.head .bottom-line {
    padding-top: 30rpx;
}

.head .title {
    font-size: 36rpx;
    font-weight: bold;
    color: rgba(34, 34, 34, 1);
}

.head .info {
    font-size: 26rpx;
    font-weight: 500;
    display: flex;
    align-items: center;
    margin-top: 20rpx;
}

.head .info image {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.head .info .name {
    color: rgba(66, 93, 174, 1);
    margin-right: 20rpx;
    max-width: 8em;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.head .info .dateTime {
    color: rgba(153, 153, 153, 1);
    margin-right: 20rpx;
}

.body {
    padding: 30rpx 0;
    font-size: 30rpx;
    font-weight: 500;
    color: rgba(102, 102, 102, 1);
}

.body .content {
    width: 690rpx;
    margin: auto;
}

.body .content view {
    width: 100%;
    margin-bottom: 20rpx;
    text-indent: 2em;
    word-break:break-all;
}

.body .content image {
    width: 100%;
    margin-bottom: 20rpx;
}



 .comments .comment {
    width: 690rpx;
    padding: 30rpx 0;
    margin: auto;
}

 .comments .comment .top {
    display: flex;
    margin-bottom: 10rpx;
}

 .comments .comment .top image {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

 .comments .comment .top .name {
    font-size: 26rpx;
    font-weight: bold;
    color: rgba(102, 102, 102, 1);
}

 .comments .comment .top .time {
    font-size: 20rpx;
    font-weight: 500;
    color: rgba(153, 153, 153, 1);
}

 .comments .comment .bottom {
    padding-left: 90rpx;
    font-size: 28rpx;
    font-weight: 500;
    color: rgba(34, 34, 34, 1);
}



.liked{
     color:rgba(255,171,50,1);
}

.loading{
    margin: 20rpx 0 120rpx;
}
