.index {
    color: #7a7e83;
    background-color: #f6f6f6;
}

.index view {
    box-sizing: border-box;
}

/*按钮*/

.btn {
    width: 690rpx;
    height: 90rpx;
    border-radius: 6rpx;
    line-height: 90rpx;
    text-align: center;
    font-size: 36rpx;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
}

/*点击态*/

.btn-clicking {
    background: rgba(255, 153, 6, 1);
}

/*点击未激活态*/

.btn-noClick {
    background: rgba(255, 153, 6, 0.6);
}

/*不可点击态*/

.btn-unClick {
    background: rgba(217, 217, 217, 1);
}

/* 下线条 */

.bottom-line {
    border-bottom: 1px solid #efefef;
}

/* 上线条 */

.top-line {
    border-top: 1px solid #efefef;
}

/* 步骤 */

.steps {
    width: 100%;
    height: 80rpx;
    background: rgba(214, 214, 214, 1);
    font-size: 28rpx;
    color: rgba(255, 255, 255, 1);
}

.steps::after {
    content: '';
    display: block;
    clear: both;
}

.steps .step, .steps .step-end {
    width: 33.3333%;
    line-height: 80rpx;
    text-align: center;
    float: left;
    position: relative;
}

.steps .step::after {
    content: '';
    display: block;
    background-color: rgba(214, 214, 214, 1);
    width: 57rpx;
    height: 57rpx;
    transform: rotate(-45deg);
    position: absolute;
    top: 11rpx;
    right: -26rpx;
    border-bottom: 4rpx solid #fff;
    border-right: 4rpx solid #fff;
}

.steps .step-action::after {
    background: rgba(255, 153, 6, 1);
}

.steps .step-action {
    background: rgba(255, 153, 6, 1);
}

/* 提示框样式 */
.prompt {
    padding: 20rpx 30rpx;
    display: table;
    width: 100%;
    background: rgba(255, 235, 205, 1);
    font-size: 26rpx;
    font-weight: 500;
    color: rgba(255, 153, 6, 1);
}