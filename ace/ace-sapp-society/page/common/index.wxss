/* 步骤 */

.steps {
    width: 100%;
    height: 80rpx;
    background: rgba(214, 214, 214, 1);
    font-size: 28rpx;
    color: rgba(255, 255, 255, 1);
    position: fixed;
    box-shadow: 0px 2px 8px #aaa;
}

.steps .step-one {
    z-index: 100;
}

.steps .step-two {
    z-index: 90;
}

.steps::after {
    content: '';
    display: block;
    clear: both;
}

.steps .step, .steps .step-end {
    width: 33.3333%;
    line-height: 80rpx;
    text-align: center;
    float: left;
    position: relative;
}

.steps .step::after {
    content: '';
    display: block;
    background-color: rgba(214, 214, 214, 1);
    width: 57rpx;
    height: 57rpx;
    transform: rotate(-45deg);
    position: absolute;
    top: 11rpx;
    right: -26rpx;
    border-bottom: 4rpx solid #fff;
    border-right: 4rpx solid #fff;
}

.steps .step-action::after {
    background: rgba(255, 153, 6, 1);
}

.steps .step-action {
    background: rgba(255, 153, 6, 1);
}

