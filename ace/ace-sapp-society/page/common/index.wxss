.index {
    color: #7a7e83;
    background-color: #f6f6f6;
}

.index view {
    box-sizing: border-box;
}

/*按钮*/

.btn {
    width: 690rpx;
    height: 90rpx;
    margin: 0px auto;
    border-radius: 6rpx;
    line-height: 90rpx;
    text-align: center;
    font-size: 36rpx;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
}

/*点击态*/

.btn-clicking {
    background: rgba(255, 153, 6, 1);
}

/*点击未激活态*/

.btn-noClick {
    background: rgba(255, 153, 6, 0.6);
}

/*不可点击态*/

.btn-unClick {
    background: rgba(217, 217, 217, 1);
}

.btn-bkClick {
    background: #fff;
    border: 1px solid rgba(255, 153, 6, 1);
    color: rgba(255, 153, 6, 1);
}

/* 下线条 */

.bottom-line {
    border-bottom: 1px solid #efefef;
}

/* 上线条 */

.top-line {
    border-top: 1px solid #efefef;
}

/* 步骤 */

.steps {
    width: 100%;
    height: 80rpx;
    background: rgba(214, 214, 214, 1);
    font-size: 28rpx;
    color: rgba(255, 255, 255, 1);
    position: fixed;
    box-shadow: 0px 2px 8px #aaa;
}

.steps .step-one {
    z-index: 100;
}

.steps .step-two {
    z-index: 90;
}

.steps::after {
    content: '';
    display: block;
    clear: both;
}

.steps .step, .steps .step-end {
    width: 33.3333%;
    line-height: 80rpx;
    text-align: center;
    float: left;
    position: relative;
}

.steps .step::after {
    content: '';
    display: block;
    background-color: rgba(214, 214, 214, 1);
    width: 57rpx;
    height: 57rpx;
    transform: rotate(-45deg);
    position: absolute;
    top: 11rpx;
    right: -26rpx;
    border-bottom: 4rpx solid #fff;
    border-right: 4rpx solid #fff;
}

.steps .step-action::after {
    background: rgba(255, 153, 6, 1);
}

.steps .step-action {
    background: rgba(255, 153, 6, 1);
}

/* 提示框样式 */

.prompt {
    padding: 20rpx 30rpx;
    display: table;
    width: 100%;
    background: rgba(255, 235, 205, 1);
    font-size: 26rpx;
    font-weight: 500;
    color: rgba(255, 153, 6, 1);
}

.form .form-part {
    padding: 0rpx 30rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.form .btn-part {
    padding: 20rpx 0rpx;
    margin: 70rpx 20rpx 0rpx;
    display: flex;
}

.form .input-style {
    display: flex;
    font-size: 28rpx;
    font-weight: 500;
    color: rgba(153, 153, 153, 1);
    height: 100rpx;
    align-items: center;
}

.form .switch-style {
    display: flex;
    font-size: 28rpx;
    font-weight: 500;
    color: rgba(153, 153, 153, 1);
    height: 100rpx;
    align-items: center;
    justify-content: space-between;
}

.form .textarea-style textarea {
    width: 100%;
    height: 380rpx;
    overflow: auto;
}

.form .textarea-style .textLen {
    padding: 15rpx 0 30rpx;
    text-align: right;
    font-size: 28rpx;
    font-weight: 500;
    color: rgba(255, 153, 6, 1);
}

.form .textarea-style .title {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    font-weight: 500;
    color: rgba(153, 153, 153, 1);
}

.form .input-style .title {
    width: 140rpx;
    margin-right: 10rpx;
}

.form .input-style text {
    color: #f22;
}

.form .input-style .input-value {
    flex-grow: 1;
    color: rgba(34, 34, 34, 1);
}

.hidden {
    display: none !important;
}
