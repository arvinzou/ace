<view class='index'>
    <view class='container'>
        <view class='box'>
            <view class='activity-menu'>
                <view class='menu-left'><text>火力全开</text></view>
                <view class='menu-right' bindtap='showMoreActivity'>
                    <text class='see-text'>查看更多</text>
                    <!--<image class='see-image' src='../../rediret.png'></image>-->
                </view>
            </view>
            <view class='activity'>
                <view class='activity-left'>
                    <image class='activity-image' src='{{activity.coverUrl}}'></image>
                    <block wx:if='{{isEnd == false}}'>
                    <view class='activity-warn'>
                        <view class='activity-warn-box'>
                            <view class='activity-warn-title'><text>距离活动开始</text></view>
                            <view class='activity-warn-time'>
                                <text class='time-num'>{{days}}</text>
                                <text class='time-title'>天</text>
                                <text class='time-num'>{{hours}}</text>
                                <text class='time-title'>：</text>
                                <text class='time-num'>{{minutes}}</text>
                            </view>
                        </view>
                    </view>
                    </block>
                </view>
                <view class='activity-right'>
                    <view class='activity-title'>
                        <text class='stage'>第一期</text>
                        <text class=''>{{activity.title}}</text>
                    </view>
                    <view class='applytime'><text>报名截止：{{activity.dendline}}</text></view>
                    <view class='activity-footer'>
                        <view class='sign-number'><text>已报名:{{activity.parterNum}}</text></view>
                        <view class='activity-state'><image src='../../image/icon_having.png'></image></view>
                    </view>
                </view>
                <view class='activity-type'>党建活动</view>
            </view>
        </view>
    </view>
    <view class='container'>
        <view class='box'>
            <view class='index-menu'>
                <navigator class='menu-item' url='../partyBuilding/index' >
                    <view class='menu-item-image'><image src='../../image/icon_menu_party.png'></image></view>
                    <view class='menu-item-title'><text>智慧党建</text></view>
                </navigator>
                <navigator class='menu-item' url='../activityList/index?category=1' >
                    <view class='menu-item-image'><image src='../../image/icon_welfare.png'></image></view>
                    <view class='menu-item-title'><text>公益活动</text></view>
                </navigator>
                 <navigator class='menu-item' url='../activityList/index?category=2'>
                    <view class='menu-item-image'><image src='../../image/icon_universal.png'></image></view>
                    <view class='menu-item-title'><text>普及活动</text></view>
                </navigator>
                <navigator class='menu-item' url='../activityList/index?category=3'>
                    <view class='menu-item-image'><image src='../../image/icon_menu_activity.png'></image></view>
                    <view class='menu-item-title'><text>创意活动</text></view>
                </navigator>
            </view>
            <view class='index-menu' style='margin-top:30rpx;'>
                <view class='menu-item' bindtap='behavior'>
                    <view class='menu-item-image'><image src='../../image/icon_menu_behavior.png'></image></view>
                    <view class='menu-item-title'><text>文明随手拍</text></view>
                </view>
                <navigator class='menu-item' url='../liveHome/index'>
                    <view class='menu-item-image'><image src='../../image/icon_menu_live.png'></image></view>
                    <view class='menu-item-title'><text>秀我直播</text></view>
                </navigator>
                 <view class='menu-item' bindtap='idea'>
                    <view class='menu-item-image'><image src='../../image/icon_menu_idea.png'></image></view>
                    <view class='menu-item-title'><text>我有点子</text></view>
                </view>
                <navigator class='menu-item' url='../circle/index'>
                    <view class='menu-item-image'><image src='../../image/icon_menu_circle.png'></image></view>
                    <view class='menu-item-title'><text>邻里圈子</text></view>
                </navigator>
            </view>
        </view>
    </view>

    <view class='container'>
        <view class='activity-list'>
            <view class='title01'><text>精选往事</text></view>
            <block wx:for='{{reportData}}'>
            <view class='activity-item'>
                <view class='activity-item-left'>
                    <view class='title02'><text>{{item.title}}</text></view>
                    <view class='type01'>
                        <block wx:if='{{item.category == 1}}'>
                            公益活动
                        </block>
                        <block wx:elif='{{item.category == 2}}'>
                            普及活动
                        </block>
                        <block wx:elif='{{item.category == 3}}'>
                            创新活动
                        </block>
                        <block wx:else>
                            党建活动
                        </block>
                    </view>
                    <view class='publish-person'>
                        <text class='publish-person-name'>{{item.createUserName}}</text>
                        <text class='publish-person-time'>{{item.createDate}}</text>
                    </view>
                </view>
                <view class='activity-item-right'>
                    <image class='activity-list-image' src='{{item.coverUrl}}'></image>
                </view>
            </view>
            </block>

            <!--<view class='activity-item'>
                <view class='title02'><text>天源新城——广场舞</text></view>
                <view class='activity-content'>
                
                </view>
                 <view class='publish-person'>
                        <view class='type02' style='float:left;'>秀我直播</view>
                        <text class='publish-person-name' style='float:left;padding-top:30rpx;'>刘鑫蕊</text>
                        <text class='publish-person-time' style='float:left;padding-top:30rpx;'>08-27</text>
                    </view>
            </view>-->
        </view>
    </view>
</view>
