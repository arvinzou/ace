
.index{
    width: 100%;
    background: #F6F6F6;
    margin-bottom: 150rpx;
}
.container{
    width: 100%;
    background: #FFFFFF;
    margin-bottom: 20rpx;
}
.commodity-cover{
    width: 100%;
    height: 622rpx;
    background: #F6F6F6;
    color: #999999;
    line-height: 622rpx;
    text-align: center;
}
.commodity-cover image{
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.commodity-title{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    color: #222222;
    font-size: 36rpx;
    font-weight: bold;
    padding-left: 30rpx;
}
.price-box{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
}
.price-box::after{
    content: '';
    clear: both;
    display: block;
}
.price-box-left{
    width: 50%;
    height: 100%;
    float: left;
    text-align: left;
}
.price-box-right{
    width: 50%;
    height: 100%;
    float: left;
    text-align: right;
    color: #999999;
    font-size: 22rpx;
}
.num{
    color: #FF9906;
    font-weight: bold;
    font-size: 46rpx;
    padding-right: 10rpx;
    padding-left: 30rpx;
}
.num-title{
    color: #FF9906;
    font-weight: bold;
    font-size: 26rpx;
}
.sold{
    padding-right: 20rpx;
}
.split{
    padding-right: 20rpx;
}
.stock{
    padding-right: 30rpx;

}
.title-box{
    width: 100%;
    height: auto;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
}
.title{
    width: 100%;
    height: 28rpx;
    line-height: 28rpx;
    border-left: 10rpx solid #FFB13C;
    color: #222222;
    font-size: 30rpx;
    font-weight: bold;
    padding-left: 30rpx;
}
.footer{
    width: 100%;
    height: 120rpx;
    background: #FFFFFF;
    position: fixed;
    bottom: 0;
}
.exchange{
    width: 90%;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    color: #FFFFFF;
    font-size: 36rpx;
    font-weight: bold;
    background: rgba(255,153,6,1);
    border-radius: 6rpx;
    margin: 0 auto;
}
.unexchange{
     width: 90%;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    color: #FFFFFF;
    font-size: 36rpx;
    font-weight: bold;
    background: rgba(217,217,217,1);
    border-radius: 6rpx;
    margin: 0 auto;
}
.choose_box{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
}
.choose-state{
    width: 15%;
    height: 100rpx;
    display: block;
    float: left;
    line-height: 100rpx;
    color: #999999;
    font-size: 30rpx;
}
.choose-input{
    width: 60%;
    height: 50rpx;
    margin-top: 25rpx;
    color: #222222;
    font-size: 26rpx;
    float: left;
}
.choose-image{
    width: 11rpx;
    height: 21rpx;
    margin-top: 39.5rpx;
    float: right;
}
.des{
    width: 90%;
    height: auto;
    margin: 30rpx auto;
}
rich-text  .rich-img {
    width: 100%;
    height: auto ;
}