@import "../common/lib/weui.wxss";
@import "../common/index.wxss";

.index{
    width: 100%;
    background-color: #F6F6F6;
}
.tips{
    width: 100%;
    height: 105rpx;
    line-height:40rpx;
    padding-left: 37rpx;
    color: #FF9906;
    font-size: 26rpx;
    background:rgba(255,235,205,1);
    padding-top: 19rpx;
}
.form-box{
    width: 100%;
    height: auto;
    background: #FFFFFF;
    margin-bottom: 20rpx;
}
.form{
    width: 90%;
    height: auto;
    margin: 0 auto;
}
.idea-content{
    width: 100%;
    height: 400rpx;
}
.section{
    width: 100%;
    height: 100rpx;
    border-bottom: 1px solid #F2F2F2;
}
.form-title{
    width: 10%;
    float: left;
    margin-right: 5%;
    height: 30rpx;
    padding-top: 35rpx;
    color: #999999;
    font-size: 28rpx;
}
.form-content{
    width: 85%;
    height: 30rpx;
    margin-top: 35rpx;
    float: left;
}
.section::after{
    content: '';
    clear: both;
    display: block;
}
.input-area{
    color: #DCDCDC;
    font-size: 28rpx;
    padding-top: 28rpx;
}
.section-area{
    margin-top: 60rpx;
}
.section-num{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    color: #FF9906;
    font-size: 28rpx;
    text-align: right;
}
.file{
    width: 154rpx;
    height: 154rpx;
    float: left;
    margin-right: 10rpx;
    margin-top: 30rpx;
}
.form::after{
    content: '';
    clear: both;
    display: block;
}
.file-attach{
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.footer{
    width: 100%;
    height: 120rpx;
    background: #FFFFFF;
    position: fixed;
    bottom: 0;
}
.release-btn{
    width: 90%;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    color: #FFFFFF;
    background: #FF9906;
    border-radius: 6rpx;
    font-size: 36rpx;
    font-weight: bold;
    margin-top: 15rpx;
}
.form-label{
    width: 100%;
    height: 90rpx;
}
.form-label-left{
    width: 25%;
    height: 100%;
    float: left;
    line-height: 90rpx;
}
.form-label-left text{
    color: #FF2222;
}
.form-label-right{
    width: 75%;
    height: 80%;
    float: left;
}
.form-label-right picker{
    width: 100%;
    height: 60rpx;
    margin-top: 20rpx;
}
.form-label::after{
    content: '';
    clear: both;
    display: block;
}