.navbar {
   /* z-index: 100;*/
    width: 100%;
    /*position: fixed; */
    font-size: 30rpx;
    color: #666;
    flex: none;
    display: flex;
    background: #fff;
    border-bottom: 1rpx #e5e5e5 solid;
}

.navbar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 80rpx;
}

.navbar .item.active {
    font-size: 30rpx;
    color:#1a9fff;
}

.navbar .item.active:after {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 6rpx;
    width: 40rpx;
    margin: 0 auto;
    background: #1a9fff;
    border-radius: 20%;
}
.active {
  color:#1a9fff;
  border-bottom:4rpx solid #fff;
}