@import "../common/lib/weui.wxss";
@import "../common/index.wxss";

.index {
    font-size: 24rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(102, 102, 102, 1);
}

.head_card, .detailed_card, .coin_assign, .partner_list, .content {
    background-color: #fff;
    margin-bottom: 20rpx;
}

.head_card .imgage {
    width: 750rpx;
    height: 400rpx;
}

.head_card .imgage image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}

.head_card .base_info {
    padding: 20rpx 30rpx;
    font-size: 36rpx;
    font-weight: bold;
    color: rgba(34, 34, 34, 1);
    line-height: 44rpx;
}

.head_card .base_info .organizer {
    font-size: 26rpx;
    padding: 20rpx 0rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    margin-top: 20rpx;
}

.headimage {
    width: 60rpx;
    height: 60rpx;
    object-position: center;
    object-fit: cover;
    margin-right: 16rpx;
    border-radius: 50%;
    overflow: hidden;
}

.head_card .base_info .organizer .remark {
    color: rgba(66, 93, 174, 1);
    margin-left: 20rpx;
}

.detailed_card .time {
    display: flex;
    justify-content: space-around;
}

.detailed_card .time >view {
    width: 375rpx;
    padding: 28rpx 0 28rpx 30rpx;
}

.detailed_card .time >view:nth-child(2n+1) {
    border-right: 1px solid #e5e5e5;
}

.detailed_card  .value {
    font-size: 26rpx;
    font-weight: bold;
    color: rgba(34, 34, 34, 1);
}

.detailed_card .add_type {
    display: flex;
    align-items: center;
    padding: 35rpx 30rpx;
}

.help {
    display: flex;
    align-items: center;
    margin: 0 0 22rpx 30rpx;
}

.help view {
    border: 1px solid;
    border-radius: 50%;
    width: 26rpx;
    height: 26rpx;
    line-height: 23rpx;
    text-align: center;
    margin-left: 12rpx;
    font-size: 24rpx;
}

.coin_assign {
    height: 120rpx;
    padding: 0px 30rpx;
    display: flex;
    align-items: center;
}

.coin_assign .coin_mark {
    font-size: 28rpx;
    font-weight: bold;
    color: rgba(28, 188, 128, 1);
}

.partner_list {
    padding: 24rpx 30rpx;
}

.partner_list .total {
    margin-bottom: 20rpx;
}

.partner_list .number {
    font-weight: bold;
    color: rgba(34, 34, 34, 1);
}

.partner_list .list image {
    margin-right: 12rpx;
}

.partner_list .list {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.partner_list .list .headImage_list {
    height: 60rpx;
}

.ellipsis {
    height: 16rpx;
    width: 16rpx;
    border-radius: 50%;
    background-color: #dbdbdb;
}

.ellipsis::after, .ellipsis::before {
    content: "";
    position: relative;
    display: block;
    height: 16rpx;
    width: 16rpx;
    border-radius: 50%;
    background-color: #dbdbdb;
}

.ellipsis::after {
    top: -15rpx;
    left: 25rpx;
}

.ellipsis::before {
    right: 25rpx;
}

.more {
    width: 20rpx;
    height: 20rpx;
    border-right: 2px solid #dbdbdb;
    border-bottom: 2px solid #dbdbdb;
    transform: rotate(-45deg);
}

.content .content_title {
    padding: 0 30rpx;
    height: 98rpx;
    line-height: 98rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: rgba(34, 34, 34, 1);
}

.content .content_text {
    padding: 30rpx 30rpx;
    font-size: 28rpx;
    font-weight: 500;
    color: rgba(153, 153, 153, 1);
}

.btn_content {
    display: flex;
    height: 120rpx;
    justify-content: space-around;
    align-items: center;
    background-color: #fff;
}
