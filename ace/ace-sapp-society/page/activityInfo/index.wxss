.ellipsis {
    height: 16rpx;
    width: 16rpx;
    border-radius: 50%;
    background-color: #dbdbdb;
}

.ellipsis::after, .ellipsis::before {
    content: "";
    position: relative;
    display: block;
    height: 16rpx;
    width: 16rpx;
    border-radius: 50%;
    background-color: #dbdbdb;
}

.ellipsis::after {
    top: -15rpx;
    left: 25rpx;
}

.ellipsis::before {
    right: 25rpx;
}

.more {
    width: 20rpx;
    height: 20rpx;
    border-right: 2px solid #dbdbdb;
    border-bottom: 2px solid #dbdbdb;
    transform: rotate(-45deg);
}

