@import "../common/lib/weui.wxss";

.index{
    width: 100%;
}
.rank_box{
    width: 90%;
    height: 90rpx;
    margin: 30rpx auto;
    text-align: center;
    line-height: 90rpx;
    color: #ffab32;
    font-size: 30rpx;
}
.rank_item01{
    width: 32%;
    height: 100%;
    border-radius: 6rpx  0rpx   0rpx  6rpx;
    border: 2px solid #ffab32;
    float: left;
}
.rank_item02{
    width: 32%;
    height: 100%;
    border-left: none;
    border-top: 2px solid #ffab32;
    border-bottom: 2px solid #ffab32;
    float: left;
}
.rank_item03{
    width: 32%;
    height: 100%;
    border-radius:0rpx 6rpx 6rpx 0rpx;
    border:2px solid rgba(255,171,50,1);
    float: left;
}
.rank_box::after{
    content: '';
    clear: both;
    display: block;
}
.active{
    background: #ffab32;
    color: #FFFFFF;
}
.rank_list{
    width: 100%;
}
.rank_item{
    width: 90%;
    height: 120rpx;
    margin: 0 auto;
    border-bottom: 1px solid #efefef;
}
.top-image{
    width: 40rpx;
    height: 50rpx;
    margin-top: 35rpx;
    float: left;
}
.head{
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    margin-top: 25rpx;
    float: left;
    margin-left: 30rpx;
    margin-right: 23rpx;
    background: #CCCDC8;
}
.head image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.name{
    color: #222222;
    font-size: 30rpx;
    line-height: 120rpx;
    float: left;
}
.number{
    float: right;
    line-height: 120rpx;
    color: #ffab32;
    font-weight: bold;
    font-size: 36rpx;
}
.top-text{
    float: left;
    line-height: 120rpx;
    color: #999999;
    font-size: 48rpx;
    font-weight: bold;
    font-family:Bahnschrift-Bold;
}