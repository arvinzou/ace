/* page/index/index.wxss */
@import "../common/lib/weui.wxss";
@import "../common/index.wxss";

.cover {
    margin-bottom: 20rpx;
}

.cover {
    background-color: #fff;
    width: 750rpx;
    height: 400rpx;
    background-repeat: no-repeat;
    background-position: 50% 50%;
    background-size: 340rpx 192rpx;
    text-align: center;
    color: #a5a5a5;
    line-height: 500rpx;
    overflow: hidden;
}

.cover image{
    width: 100%;
    height: 100%;
    
}
#title{
    text-align: center;
}

.content {
    background-color: #fff;
    padding: 0rpx 30rpx 110rpx;
}

.content .title {
    width: 100%;
    display: table;
    line-height: 36rpx;
    padding: 32rpx 0;
    font-size: 36rpx;
    font-weight: bold;
    color: #666;
}

.content .title textarea {
    width: 100%;
}

.editor-content {
    margin-top: 30rpx;
}

.editor {
    position: relative;
    padding-bottom: 80rpx;
}

.editor .add {
    height: 190rpx;
    border: 1px dashed #dcdcdc;
    border-radius: 10rpx;
    line-height: 190rpx;
    text-align: center;
}

.editor .tool {
    position: absolute;
    display: flex;
    justify-content: space-between;
    width: 100%;
    background-color: #fff;
    box-shadow: 0px 2px 8px #aaa;
    padding: 0 20rpx;
    height: 80rpx;
    align-items: center;
}

.editor .tool .eBtn {
    flex-grow: 1;
    font-size: 26rpx;
    font-weight: 500;
    color: rgba(153, 153, 153, 1);
    text-align: center;
    border-right: 0.5px solid #ccc;
}

.editor .tool .iconfont{
    margin-right: 4rpx;
}

.icon-ccgl-shujuzidianxiugaijilu-5 {
    color: #ff9a09;
}

.icon-wenben {
    color: #21c181;
    font-size: 34rpx;
}

.icon-tianjiatupian {
    color: #52abea;
}

.editor .tool .btnEnd {
    color: #fe655a;
    border-right-width: 0px !important;
}

.ele-content .textStyle{
    color: rgba(102, 102, 102, 1);
    width: 100%;
    padding: 0;
    margin: 0;
    word-wrap:break-word ;
}

.ele-content {
    padding: 20rpx 20rpx;
}

.ele-action {
    box-shadow: 0px 2px 8px #aaa;
    
}

.ele-content image {
    width: 100%;
    object-fit: cover;
}

.disabledStyle text{
    opacity: 0.4;
}


.btn-part{
    padding:15rpx 30rpx; 
    position: fixed;
    bottom: 0;
    width: 100%;
    margin: 0;
    background-color: rgba(253, 253, 253, 0.5)
}
.btn-bkClick{
    margin-right: 40rpx;
}


