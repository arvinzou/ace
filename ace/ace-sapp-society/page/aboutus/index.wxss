@import "../common/lib/weui.wxss";
.index{
    width: 100%;
    height: auto;
    background: #F6F6F6;
}
.map-box{
    width: 90%;
    height: 400rpx;
    margin: 30rpx auto;
}
.banner{
    width: 100%;
    height: 476rpx;
    position: relative;
}
.banner-footer{
    width: 94%;
    height: 60rpx;
    background: #FFFFFF;
    border-radius: 20rpx 20rpx 0rpx 0rpx;
    position: absolute;
    left: 3%;
    top: 436rpx;
}
.banner image{
    width: 100%;
    height: 100%;
}
.content{
    width: 94%;
    height: auto;
    background: #FFFFFF;
    margin-left: 3%;
    margin-right: 3%;
    margin-bottom: 20rpx;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    background: #FFFFFF;
    border-radius: 20rpx;
}
.title{
    width: 100%;
    height: 80rpx;
    line-height: 40rpx;
    text-align: center;
    color: #FFAD38;
    font-size: 34rpx;
    font-weight: bold;
}
.detail{
    width: 96%;
    color: #666666;
    font-size: 26rpx;
    line-height: 40rpx;
    text-indent:2em;
    margin: 0 auto;
}
.code{
    width: 150rpx;
    height: 150rpx;
    margin: 30rpx auto;
}
.code image{
    width: 100%;
    height: 100%;
}
.contact{
    width: 90%;
    height: auto;
    margin: 30rpx auto;
    color: #666666;
    font-size: 30rpx;
    line-height: 48rpx;
    text-align: center;
}