@import "../common/lib/weui.wxss";
.index{
    width: 100%;
    height: auto;
}
.map-box{
    width: 90%;
    height: 400rpx;
    margin: 30rpx auto;
}
.banner{
    width: 100%;
    height: 260rpx;
}
.banner image{
    width: 100%;
    height: 100%;
}
.content{
    width: 90%;
    height: auto;
    background: #FFFFFF;
    margin: 30rpx auto;
}
.title{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #FFAD38;
    font-size: 34rpx;
    font-weight: bold;
}
.detail{
    width: 100%;
    color: #666666;
    font-size: 26rpx;
    line-height: 40rpx;
}
.code{
    width: 150rpx;
    height: 150rpx;
    margin: 30rpx auto;
}
.code image{
    width: 100%;
    height: 100%;
}
.contact{
    width: 90%;
    height: auto;
    margin: 30rpx auto;
    color: #666666;
    font-size: 30rpx;
    line-height: 48rpx;
    text-align: center;
}