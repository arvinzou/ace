@import "../common/lib/weui.wxss";

.index {
    width: 100%;
    position: relative;
}

.content{
    width: 90%;
    margin: 49rpx auto;
}
.content-item{
    width: 100%;
    padding-top: 38rpx;
    padding-bottom: 38rpx;
    border-bottom: 1px solid #E5E5E5;
}
.content-left{
    width: 15%;
    float: left;
}
.content-right{
    width: 85%;
    float: left;
}
.content-item::after{
    content: '';
    clear: both;
    display: block;
}
.head{
    width: 84rpx;
    height: 84rpx;
}
.nickname{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    color: #425DAE;
    font-size: 34rpx;
}
.remark{
    color: #1C2843;
    font-size: 28rpx;
    word-break: break-all;
    word-wrap: break-word;
}
.attach-image02{
    width:45%;
    height:300rpx;
    margin-right:3%;
    margin-bottom:10rpx;
    object-fit: cover;
}
.attach-image01{
    width:93%;
    height:300rpx;
    margin-right:3%;
    margin-bottom:10rpx;
    object-fit: cover;
}

.camera-box{
    width: 141rpx;
    height: 141rpx;
    right:40rpx;
    bottom:30rpx;
    position:fixed;
    display:flex;
    align-items:center;
    justify-content:center;
    z-index: 500;

}
.camera{
    width: 100%;
    height: 100%;
}

.navbar {
   /* z-index: 100;*/
    width: 100%;
    /*position: fixed; */
    font-size: 30rpx;
    color: #666;
    flex: none;
    display: flex;
    background: #FDFDFD;
    border-bottom: 1px #e5e5e5 solid;
}

.navbar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 65rpx;
}

.navbar .item.active {
    font-size: 30rpx;
}
.navbar .item.active:after {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 6rpx;
    width: 40rpx;
    margin: 0 auto;
    background:#ffab32;
    border-radius: 3rpx;
}
.file-attach{
    width: 80%;
    height: 25vh;
}
.attach{
    width: 100%;
    height: auto;
}
.videoImg{
    width: 90%;
    height: 300rpx;
}
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    background-color:#000;
    z-index:9999;
    top:0;
    left:0;
    opacity:0.7;
}
.controls{
    width: 100%;
    height: 80%;
    font-weight: bold;
    position: fixed;
    right: 0;
    top: 0;
}