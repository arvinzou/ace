.index{
    width: 100%;
    background: #F6F6F6;
}
.section{
    width: 100%;
    background: #FFFFFF;
    padding-top: 30rpx;
    margin-bottom: 20rpx;
}
.section_gap{
    width: 90%;
    height: auto;
    margin: 0 auto;
}
.section_title{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    color: #222222;
    font-size: 32rpx;
    font-weight: bold;
}
.scroll-view-x{
    width: 100%;
    height: 300rpx;
    display: flex;
    flex-direction: row;
}
.image-box image{
    width: 490rpx;
    height: 240rpx;
    margin-right: 24rpx;
}
.commodity{
    width: 100%;
    height: auto;
}
.commodity-item{
    width: 48%;
    height: auto;
    float: left;
    margin-bottom: 20rpx;
}
.evenDiv{
    margin-right: 4%;
}
.commodity::after{
    content: '';
    clear: both;
    display: block;
}
.cover{
    width: 100%;
    height: 333rpx;
    border-radius: 4rpx;
    background: #F6F6F6;
}
.commodity-title{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    color: #222222;
    font-size: 28rpx;
}
.commodity-label{
    width: 100%;
    height: 60rpx;
}
.commodity-label::after{
    content: '';
    clear: both;
    display: block;
}
.commodity-label-left{
    width: 50%;
    height: 100%;
    line-height: 60rpx;
    float: left;
}
.commodity-label-right{
    width: 50%;
    height: 100%;
    float: left;
}
.num{
    color: #FF9906;
    font-size: 34rpx;
    font-weight: bold;
    padding-right: 10rpx;
}
.num-title{
    color: #FF9906;
    font-size: 22rpx;
    font-weight: bold;
}
.opt{
    width: 88rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    display: block;
    color: #FFFFFF;
    background:linear-gradient(45deg,rgba(255,153,6,1),rgba(255,177,60,1));
    border-radius:4rpx;
    font-size: 28rpx;
    font-weight: bold;
    float: right;
    margin-top: 10rpx;
}