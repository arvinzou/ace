@import "../common/lib/weui.wxss";
@import "../common/index.wxss";

.index{
    width: 100%;
    background-color: #F6F6F6;
    padding-bottom: 150rpx;
}
.cover{
    width: 750rpx;
    height: 300rpx;
    line-height: 300rpx;
    text-align: center;
    background: rgba(217,217,217,1);
}
.ideaList{
    width: 90%;
    margin: 0 auto;
}
.ideaItem{
    width: 100%;
    height: auto;
    background: #FFFFFF;
    margin-top: 30rpx;
    padding-bottom: 30rpx;
}
.title_box{
    height: 91rpx;
    line-height: 91rpx;
    border-bottom: 1px solid #E5E5E5;
    padding-left: 30rpx;
    padding-right: 30rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    color: #222222;
    font-size: 32rpx;
    font-weight: bold;
}
.content_box{
    height: 81rpx;
    line-height: 81rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    color: #666666;
    font-size: 28rpx;
}
.item_footer{
    width: 100%;
    height: 61rpx;
}
.time_box{
    width: 70%;
    height: 100%;
    float: left;
    line-height: 61rpx
}
.file_box{
    width: 30%;
    height: 100%;
    float: right;
    text-align: right;
}
.item_footer::after{
    content: '';
    clear: both;
    display: block;
}
.name{
    color: #999999;
    font-size: 26rpx;
    padding-right: 23rpx;
    padding-left: 30rpx;
}
.time{
    color: #999999;
    font-size: 26rpx;
}
.attach{
    width: 26rpx;
    height: 24rpx;
}
.file_box text{
    font-size: 26rpx;
    color: #425DAE;
    padding-right: 30rpx;
    padding-left: 15rpx;
}
.footer{
    width: 100%;
    height: 120rpx;
    background: #FFFFFF;
    position: fixed;
    bottom: 0;
}
.release{
    width: 90%;
    height: 90rpx;
    background:rgba(255,153,6,1);
    color: #FFFFFF;
    font-size: 36rpx;
    font-weight: bold;
    margin-top: 15rpx;
}
.status-box{
    width: 90%;
    height: auto;
    margin: 0 auto;
}
.status{
    width: 80rpx;
    height: 45rpx;
    line-height: 45rpx;
    text-align: center;
    font-size: 24rpx;
    color: #FFFFFF;
    background: #1a9fff;
    border-radius: 6rpx;
}