<view class='index'>
    <view class='ideaList'>
    <block wx:for='{{ideaList}}'>
        <view class='ideaItem' bindtap='showDetal' data-id='{{ item.id }}'>
            <view class='title_box'><text>{{ item.title }}</text></view>
            <view class='content_box'><text>{{ item.solution }}
            </text></view>
            <view class='item_footer'>
                <view class='time_box'>
                    <text class='name'>{{ item.createUserName }}</text>
                    <text class='time'>{{ item.createDate }}</text>
                </view>
                <view class='file_box'>
                    <image src='../../image/attach.png' class='attach'></image>
                    <text>附件</text>
                </view>
            </view>
            <view class='status'>
                <block wx:if='{{item.status == 1}}'>
                    暂存
                </block>
                <block wx:elif='{{item.status == 2}}'>
                    待审
                </block>
                <block wx:elif='{{item.status == 3}}'>
                    通过
                </block>
                <block wx:elif='{{item.status == 4}}'>
                    驳回
                </block>
            </view>
        </view>
       </block>
    </view>
    <view class='footer'>
        <button class='release' bindtap='releaseIdea'>发布点子</button>
    </view>
</view>