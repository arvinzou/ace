<wxs src='../common/index.wxs' module='filter' />
<view class="index">
    <view class="topBar">
        <scroll-view class="navbar" scroll-x="true" scroll-left="{{scrollNavbarLeft}}">
            <view class="navbar-item {{ item.active }}" id="{{ idx }}" wx:for-index="idx" wx:for="{{ navbarArray }}" catchtap="onTapNavbar">
                <view class="navbar-item-wrap">{{ item.text }}</view>
            </view>
        </scroll-view>
    </view>
    <scroll-view  bindscroll='recordY' scroll-top='{{vdata.scroll}}' scroll-y class='activity-list'>
        <view wx:for='{{vdata.list}}' class='list-style-1 list-style'>
            <view class='left'>
                <view class='title'>{{item.title}}</view>
                <view class='detail'>
                    <text wx:if='{{item.category==1}}' class='tags_b  tags_gy'>公益活动</text>
                    <text wx:elif='{{item.category==2}}' class='tags_b tags_pj'>普及活动</text>
                    <text wx:elif='{{item.category==3}}' class='tags_b tags_cy'>创意活动</text>
                    <text wx:elif='{{item.category==4}}' class='tags_b tags_dj'>党建活动</text>
                    <text>{{item.createUserName}}</text>
                    <text>{{filter.subDateTime(item.lastModifyDate,5,10)}}</text>
                    <text>18条评论</text>
                </view>
            </view>
            <view class='right'>
                <image mode='aspectFill' src='{{item.coverUrl}}'></image>
            </view>
        </view>
        <view class="loading" hidden="{{!vdata.Loadingstatus}}">正在载入更多...</view>
        <view class="loading" hidden="{{!vdata.LoadOver}}">已加载全部</view>
