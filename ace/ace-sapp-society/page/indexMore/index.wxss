@import "../common/lib/weui.wxss";

.index{
    width: 100%;
    height: auto;
    background: #F6F6F6;
}
.activity-list{
    width: 100%;
    height: auto;
    background: #FFFFFF;
    margin-bottom: 20rpx;
}
.activity{
    width: 90%;
    height: auto;
    margin: 0 auto;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    position: relative;
}
.activity-left{
    width: 40%;
    float: left;
}
.activity-right{
    width: 60%;
    float: left;
}
.activity::after{
    content: '';
    clear: both;
    display: block;
}
.activity-title{
    width: 100%;
    height: 60rpx;
    overflow: hidden;  
    text-overflow: ellipsis; 
    white-space: nowrap;
    padding-left: 30rpx;
}
.stage{
    width: 82rpx;
    height: 30rpx;
    display: block;
    float: left;
    line-height: 30rpx;
    text-align: center;
    color: #F65246;
    font-weight: bold;
    border:2px solid rgba(255,127,127,1);
    border-radius:4rpx; 
    font-size: 20rpx;
    margin-top: 10rpx;
    margin-right: 10rpx;
}
.activity-image{
    width: 270rpx;
    height: 160rpx;
    border-radius: 4rpx;
    position: relative;
}
.applytime{
    color: #666666;
    font-size: 26rpx;
    font-weight: 500;
    padding-left: 30rpx;
}
.activity-footer{
    width: 100%;
    height: 50rpx;
}
.sign-number{
    width: 142rpx;
    height: 100%;
    line-height: 50rpx;
    color: #666666;
    font-size: 26rpx;
    float: left;
    padding-left: 30rpx;
}
.activity-state{
    width: 142rpx;
    height: 100%;
    float: right;
}
.activity-footer::after{
    content: '';
    clear: both;
    display: block;
}
.activity-state image{
    width: 142rpx;
    height: 48rpx;
}
.activity-type{
    width: 94rpx;
    height: 36rpx;
    background-image: url('data:image/png;base64,');
    text-align: center;
    position: absolute;
    color: #FFFFFF;
    font-size: 20rpx;
    font-weight: bold;
}
.activity-warn{
    width: 270rpx;
    height: 120rpx;
    position: absolute;
    bottom:30rpx;
    text-align:center;
}
.activity-warn-title{
    color: #FFFFFF;
    font-size: 22rpx;
    padding-bottom: 10rpx;
}
.time-num{
    width: 40rpx;
    height: 45rpx;
    display: block;
    line-height: 45rpx;
    border-radius: 4rpx;
    background: rgba(255,153,6,1);
    color: #FFFFFF;
    font-size: 26rpx;
    text-align: center;
    padding-left: 5rpx;
    padding-right:5rpx;
    float: left;
}
.time-title{
    width: 25rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    color: #FFFFFF;
    font-size: 18rpx;
    float: left;
}
.activity-warn-time::after{
    content: '';
    clear: both;
    display: block;
}
.lft{
    margin-left: 35rpx;
}