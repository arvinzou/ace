<view class='index'>
    <block wx:for="{{list}}" wx:key="*">
        <view class='activityInfo separate'>
            <view class='content'>
                <view class='img'>
                    <image mode='aspectFill' src='{{item.coverUrl}}'></image>
                </view>
                <view class='info'>
                    <text class='title'>{{item.title}}</text>
                    <text wx:if='{{item.category==1}}' class='tags_b  tags_gy'>公益活动</text>
                    <text wx:elif='{{item.category==2}}' class='tags_b tags_pj'>普及活动</text>
                    <text wx:elif='{{item.category==3}}' class='tags_b tags_cy'>创意活动</text>
                    <text wx:elif='{{item.category==4}}' class='tags_b tags_dj'>党建活动</text>
                    <text wx:if='{{type==2}}' class='remark'>活动成功后奖励爱心币X{{item.host}}</text>
                    <text wx:if='{{type==1}}' class='remark'>爱心币X{{item.participant}}</text>
                </view>
            </view>

            <view wx:if='{{item.status==2&&type==2}}' class='status status1'>活动待审核</view>

            <view wx:if='{{item.status==32&&type==2}}' class='status status1'>活动有效审核</view>

            <view wx:if='{{item.status==3&&type==2}}' class='status status4'>发布已通过</view>

            <view wx:if='{{item.status==3&&item.startDate<nowDate&&type==2}}' bindtap='activitySign' data-type='activityStart' data-id='{{item.id}}' class='status status2'>活动开始</view>

            <view wx:if='{{item.status==31&&type==1&&item.adStatus==0}}' bindtap='activitySign' data-type='selfSign' data-id='{{item.id}}' class='status status2'>现场签到</view>
            <view wx:if='{{item.status==3&&type==1}}' bindtap='notTimeSign' class='status status2 .opacity6'>现场签到</view>

            <view wx:if='{{item.status>"31"&&type==1&&item.adStatus==0}}' class='status status5'>活动未签到</view>

            <view wx:if='{{type==1&&item.adStatus==1}}' class='status status4'>签到成功</view>

            <view wx:if='{{item.status==31&&type==2}}' bindtap='activitySign' data-type='activityEnd' data-id='{{item.id}}' class='status status2'>活动结束</view>

            <view wx:if='{{item.status==33}}' class='status status4'>活动成功</view>

            <view wx:if='{{item.status==32&&!item.arStatus&&type==2}}' bindtap='postReport' data-id='{{item.id}}' class='status status2'>发布报道</view>

            <view wx:if='{{(item.arStatus==1||item.arStatus==4)&&type==2&&item.status<"4"}}' bindtap='postReport' data-id='{{item.id}}' class='status status2'>报道编辑</view>

            <view wx:if='{{item.arStatus==2&&type==2&&item.status<"4"}}' bindtap='postReport' data-id='{{item.id}}' class='status status1'>报道审核</view>

            <view wx:if='{{item.arStatus==3&&type==2&&item.status<"4"}}' class='status status4'>报道发布成功</view>

            <view wx:if='{{item.arStatus==4&&type==2&&item.status<"4"}}'  class='status status5'>报道驳回</view>

            <view wx:if='{{item.status==4&&type==2}}' class='status status5'>审核失败</view>

            <view wx:if='{{item.status==41&&type==2}}' class='status status1'>活动无效</view>

            <view wx:if='{{item.status==42&&type==2}}' class='status status1'>活动超时</view>

            <view wx:if='{{(item.status==4||item.status==42)&&type==2}}' bindtap='delActivity' data-type='{{item.id}}' data-id='{{item.id}}' class='status status2'>删除</view>

            <view wx:if='{{item.status==4&&type==2}}' bindtap='editActivity' data-type='{{item.id}}' data-id='{{item.id}}' class='status status2'>修改</view>
        </view>
    </block>

    <view class="loading" hidden="{{!Loadingstatus}}">正在载入更多...</view>
    <view class="loading" hidden="{{!LoadOver}}">已加载全部</view>
</view>