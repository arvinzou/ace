@import "../common/index.wxss";

.activityInfo {
    width: 100%;
    padding: 40rpx 30rpx 30rpx;
    background: #fff;
}


.activityInfo .content {
    background: #f6f6f6;
    margin-bottom: 30rpx;
}

.activityInfo .content::after ,.activityInfo::after {
    content: '';
    clear: both;
    display: block;
}

.activityInfo .content>view {
    float: left;
}

.activityInfo .content .img {
    width: 250rpx;
    height: 200rpx;
    overflow: hidden;
}

.activityInfo .content image {
    width: 100%;
    height: 100%;
}

.activityInfo .content .info {
    width: 440rpx;
    padding: 20rpx 30rpx;
}

.activityInfo .content text {
    display: block;
}

.activityInfo .content .title {
    font-size: 30rpx;
    font-weight: bold;
    color: rgba(34, 34, 34, 1);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.activityInfo .content .tags_b {
   margin:15rpx 0;
}

.activityInfo .content .remark {
    font-size: 24rpx;
    font-weight: 500;
    color: rgba(102, 102, 102, 1);
}

.status {
    float: right;
    margin:0 0 14rpx 14rpx;
    height: 50rpx;
    padding: 0 20rpx;
    border-radius: 6rpx;
    line-height: 50rpx;
    font-size: 26rpx;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
}
.status1{
    background: rgba(255, 153, 6, 1);
    
}

.status2{
    box-sizing: border-box;
    border:2rpx solid rgba(255,153,6,1);
    color: #FF9906;
    line-height: 46rpx;
}

.status3{
    background: #D9D9D9;
}

.status4{
    background: #1CBC80;
}

.status5{
    background: #F34F3E;
    
}

.opacity6{
    opacity: .6;
}
