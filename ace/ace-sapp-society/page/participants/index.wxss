@import "../common/index.wxss";

page {
    background-color: #fff;
}

.head{
    height: 60rpx;
    padding: 0 30rpx;
    line-height: 60rpx;
    font-size:24rpx;
    font-weight:500;
    color:rgba(102,102,102,1);
    background-color: #f6f6f6;
}

.persons{
    display: flex;
    height: 128rpx;
    width: 690rpx;
    margin: auto;
    justify-content: space-between;
    align-items: center;
    background: #fff;
}

.persons .headImg{
width:80rpx;
height:80rpx;
border-radius:50%;
overflow: hidden;
}

.persons .headImg image{
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.persons .name{
    font-size:32rpx;
    width: 5em;
    font-family:PingFang-SC-Bold;
    font-weight:bold;
    color:rgba(34,34,34,1);
    margin-left: 1em;
}

.persons .tel{
    font-size:30rpx;
font-family:PingFang-SC-Bold;
font-weight:bold;
color:rgba(153,153,153,1);
flex-grow: 1;
text-align: right;
}

.icon-dianhua{
    font-size: 30rpx;
    margin-left: 20rpx;
    color: rgba(255,165,35,1)
}
