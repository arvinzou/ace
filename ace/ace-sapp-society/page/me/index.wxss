.banner {
    padding: 10rpx 30rpx 30rpx;
    color: #fff;
}

.banner .top::after {
    content: "";
    clear: both;
    display: block;
}

.banner .userInfo {
    box-sizing: border-box;
    width: 690rpx;
    height: 280rpx;
    background-color: #ffa629;
    border-radius: 22rpx;
    padding: 30rpx;
    background-image: url("data:image/svg+xml,%3Csvg class='wave-container' xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' viewBox='0 24 150 28' preserveAspectRatio='none'%3E %3Cdefs%3E %3Cpath id='gentle-wave' d='M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z'%3E%3C/path%3E %3C/defs%3E %3Cg class='parallax'%3E %3Cuse xlink:href='%23gentle-wave' x='50' y='2' fill='rgba(255,255,255,.2)'%3E%3C/use%3E %3Cuse xlink:href='%23gentle-wave' x='10' y='5' fill='rgba(255,255,255,.2)'%3E%3C/use%3E %3Cuse xlink:href='%23gentle-wave' x='90' y='8' fill='rgba(255,255,255,.2)'%3E%3C/use%3E %3C/g%3E %3C/svg%3E");
      background-size: 100% 40%;
      background-repeat: no-repeat;
      background-position-y: 100%;
}

.banner .userInfo .headImage {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border: rgba(255, 255, 255, 0.3) solid 6rpx;
    overflow: hidden;
    margin-right: 22rpx;
}

.banner .userInfo image {
    width: 100%;
    height: 100%;
}

.banner .userInfo .textInfo {
    width: 510rpx;
}

.banner .userInfo .top>view {
    float: left;
}

.banner .userInfo .textInfo .name {
    font-size: 32rpx;
    font-weight: 500;
}

.banner .userInfo .textInfo .center {
    width: 120rpx;
    height: 40rpx;
    background: rgba(246, 155, 25, 1);
    border-radius: 20rpx;
    font-size: 24rpx;
    line-height: 40rpx;
    font-weight: 500;
    text-align: center;
}

.banner .userInfo .data{
    width: 100%;
    margin-top: 30rpx;
    font-size:32rpx;
    font-weight:bold;
    display: flex;
    justify-content: space-between;
}
