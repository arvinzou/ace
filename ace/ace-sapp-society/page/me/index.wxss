.banner {
    padding: 10rpx 30rpx 30rpx;
    color: #fff;
}

.banner .top::after {
    content: "";
    clear: both;
    display: block;
}

.banner .userInfo {
    box-sizing: border-box;
    width: 690rpx;
    height: 280rpx;
    background-color: #ffa629;
    border-radius: 22rpx;
    padding: 30rpx;
      background-size: 100% 40%;
      background-repeat: no-repeat;
      background-position-y: 100%;
}

.banner .userInfo .headImage {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border: rgba(255, 255, 255, 0.3) solid 6rpx;
    overflow: hidden;
    margin-right: 22rpx;
}

.banner .userInfo image {
    width: 100%;
    height: 100%;
}

.banner .userInfo .textInfo {
    width: 510rpx;
}

.banner .userInfo .top>view {
    float: left;
}

.banner .userInfo .textInfo .name {
    font-size: 32rpx;
    font-weight: 500;
}

.banner .userInfo .textInfo .center {
    width: 120rpx;
    height: 40rpx;
    background: rgba(246, 155, 25, 1);
    border-radius: 20rpx;
    font-size: 24rpx;
    line-height: 40rpx;
    font-weight: 500;
    text-align: center;
}

.banner .userInfo .data{
    width: 100%;
    margin-top: 30rpx;
    font-size:32rpx;
    font-weight:bold;
    display: flex;
    justify-content: space-between;
}
