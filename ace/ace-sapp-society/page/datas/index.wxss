@import "../common/lib/weui.wxss";
.index{
    width: 100%;
    height: auto;
    background: #F6F6F6;
}
.box{
    width: 100%;
    height: auto;
    background: #FFFFFF;
    margin-bottom: 20rpx;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
}
.container{
    width: 90%;
    height: auto;
    margin: 0 auto;
}
.title{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    color: #222222;
    font-weight: bold
}
.content{
    width: 100%;
    height: auto;
}
.content::after{
    content: '';
    clear: both;
    display: block;
}
.data-item{
    width: 25%;
    height: auto;
    float: left;
    text-align: center;
}
.data-num{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    color: #3C82FC;
    font-size: 40rpx;
    font-weight: bold;
}
.data-title{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    color: #798092;
    font-size: 26rpx;
}
.data-society-item{
    width: 33.33%;
    height: auto;
    float: left;
    text-align: center
}