@import "../common/lib/weui.wxss";

.index {
    width: 100%;
    background-color: #f6f6f6;
    position: relative;
}
.content{
    width: 90%;
    margin: 49rpx auto;
}
.content-item{
    width: 100%;
    padding-top: 38rpx;
    padding-bottom: 38rpx;
    border-bottom: 1px solid #E5E5E5;
}
.content-left{
    width: 15%;
    float: left;
}
.content-right{
    width: 85%;
    float: left;
}
.content-item::after{
    content: '';
    clear: both;
    display: block;
}
.head{
    width: 84rpx;
    height: 84rpx;
}
.nickname{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    color: #425DAE;
    font-size: 34rpx;
}
.remark{
    color: #1C2843;
    font-size: 28rpx;
    word-break: break-all;
    word-wrap: break-word;
}
.attach-image{
    width: 158rpx;
    height: 158rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}
.camera-box{
    width: 141rpx;
    height: 141rpx;
    position: absolute;
    bottom: 200rpx;
    right: 10rpx;
    z-index:200;
}
.camera{
    width: 100%;
    height: 100%;
}
.nickname::after{
    content: '';
    clear: both;
    display: block;
}
.name{
    float: left;
}
.submitDate{
    float: left;
    font-size: 24rpx; 
}
.status{
    width: 80rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    display: block;
    float: left;
    color: #FFFFFF;
    background: blue;
    border-radius: 5rpx;
    font-size:24rpx;
}
.navbar {
   /* z-index: 100;*/
    width: 100%;
    /*position: fixed; */
    font-size: 30rpx;
    color: #666;
    flex: none;
    display: flex;
    background: #FDFDFD;
    border-bottom: 1px #e5e5e5 solid;
}

.navbar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 65rpx;
}

.navbar .item.active {
    font-size: 30rpx;
}
.navbar .item.active:after {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 6rpx;
    width: 40rpx;
    margin: 0 auto;
    background:#FF9906;
    border-radius: 3rpx;
}