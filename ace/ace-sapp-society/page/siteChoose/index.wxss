.index{
    width: 100%;
    background: #F6F6F6;
    margin-bottom: 150rpx;
}
.container{
    width: 100%;
    background: #FFFFFF;
    margin-bottom: 20rpx;
}
.commodity-cover{
    width: 100%;
    height: 488rpx;
    background: #F6F6F6;
    color: #999999;
    line-height: 488rpx;
    text-align: center;
}
.commodity-cover image{
    width: 100%;
    height: 100%;
}
.date-box{
    width: 90%;
    height: auto;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    border-bottom: 1px solid #F2F2F2;
    margin: 0 auto;
}
.title{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #222222;
    font-size: 32rpx;
    font-weight: bold;
}
.days{
    width: 100%;
    height: 63rpx;
    border-radius: 32rpx;
    color: #666666;
    font-size: 28rpx;
    font-weight: bold;
    background:rgba(245,245,245,1);
    line-height: 63rpx;
}
.days::after{
    content: '';
    clear: both;
    display: block;
}
.days-item{
    width: 12.5%;
    height: 100%;
    float: left;
    text-align: center;
}
.date{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    color: #666666;
    font-weight: bold;
}
.date::after{
    content: '';
    clear: both;
    display: block;
}
.date-item{
    width: 12.5%;
    height: 80rpx;
    text-align: center;
    float: left;

}
.date-active{
    border-radius: 50%;
    color: #FFFFFF;
    background: rgba(255,171,50,1);
}
.time-box{
    width: 90%;
    height: auto;
    margin: 0 auto;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
}
.time-span{
    width: 50%;
    height: 40rpx;
    float: left;
}
.time-box::after{
    content: '';
    clear: both;
    display: block;
}
.slot{
    width: 70%;
    height: 60rpx;
    line-height: 60rpx;
    display: block;
    background: #F5F5F5;
    color: #666666;
    font-weight: bold;
    padding-left: 30rpx;
    font-size: 30rpx;
    border-radius: 6rpx;
}
.time-span-title{
    color: #666666;
    font-size: 30rpx;
}
.footer{
    width:100%;
    height:120rpx;
    background:#FFFFFF;
    position:fixed;
    bottom:0;
}
.confirm{
    width:90%;
    height:90rpx;
    line-height:90rpx;
    text-align:center;
    color:#FFFFFF;
    font-size:36rpx;
    font-weight:bold;
    background:rgba(255,171,50,1);
    border-radius:6rpx;
    margin:0 auto;
}
.time-active{
    color: #FFFFFF;
    background:rgba(255,171,50,1);
}
.hidden{
    display:none;
}