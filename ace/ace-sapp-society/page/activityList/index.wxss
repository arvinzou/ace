@import "../common/index.wxss";

.singleActivity {
    padding: 48rpx 0 36rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
}
.opacity{
  opacity: 0.5;
}

.singleActivity .content {
    width: 690rpx;
    margin: auto;
    position: relative;
}

.singleActivity .content .cover {
    width: 100%;
    height: 330rpx;
    overflow: hidden;
}

.singleActivity .content .cover image {
    width: 100%;
    height: 100%;
    object-position: 50% 50%;
}

.singleActivity .content .title{
    font-size:36rpx;
    font-weight:bold;
    color:rgba(34,34,34,1);
    overflow-wrap: normal;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    line-height: 60rpx;
    margin-top: 17rpx;
}

.singleActivity .content .startTime{
    font-size:26rpx;
    color:rgba(153,153,153,1);
}

.singleActivity .content .statusTag {
    position: absolute;
    top:-17rpx;
}
