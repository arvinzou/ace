@import "../common/index.wxss";

.singleActivity {
    padding: 48rpx 0 36rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
}

.singleActivity .content {
    width: 690rpx;
    margin: auto;
    position: relative;
}

.singleActivity .content .cover {
    width: 100%;
    height: 330rpx;
    overflow: hidden;
}

.singleActivity .content .cover image {
    width: 100%;
    height: 100%;
    object-position: 50% 50%;
}

.singleActivity .content .title{
    font-size:36rpx;
    font-weight:bold;
    color:rgba(34,34,34,1);
    overflow-wrap: normal;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    line-height: 60rpx;
    margin-top: 17rpx;
}

.singleActivity .content .startTime{
    font-size:26rpx;
    color:rgba(153,153,153,1);
}

.singleActivity .content .tag {
    position: absolute;
    width: 134rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    font-size: 22rpx;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
    background: rgba(181, 181, 181, 1);
    border-top-left-radius: 6rpx;
    border-bottom-right-radius: 16rpx;
    top:-17rpx;
}

.singleActivity .content .taging{
    background:linear-gradient(90deg,rgba(251,81,82,1),rgba(251,117,81,1));
}
