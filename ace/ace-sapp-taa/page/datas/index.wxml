<view class='index'>
    <view class='screen'>
        <view class='select-box'>
            <picker bindchange="bindRegionChange" mode='region' value="{{region}}">
                <view class="picker">{{region[1]}}{{region[2]}}</view>
                <view class='drop-down'><image src='../../image/icon-drop-down.png'></image></view>
            </picker>
        </view>
        <view class='select-box'>
            <picker bindchange="bindMonthChange" mode='date' fields="month" value='{{date}}'>
                <view class="picker">{{date}}</view>
                <view class='drop-down'><image src='../../image/icon-drop-down.png'></image></view>
            </picker>
        </view>
    </view>
    <view class='box'>
        <view class='title-box'>
            <view class='title-icon'></view>
            <view class='title'>本月数据统计</view>
        </view>
        <view class='total'>
            <view class='accident rm'>
                <view class='accident-left'>
                    <image src='../../image/icon-accident.png'></image>
                </view>
                <view class='accident-right'>
                    <view class='accident-num'>243</view>
                    <view class='accident-title'>交通事故</view>
                </view>
            </view>
            <view class='accident'>
                 <view class='accident-left'>
                    <image src='../../image/icon-diednum.png'></image>
                </view>
                <view class='accident-right'>
                    <view class='accident-num'>62</view>
                    <view class='accident-title'>死亡人数</view>
                </view>
            </view>
        </view>
    </view>

    <view class='box'>
        <view class='title-box'>
            <view class='title-icon'></view>
            <view class='title'>事故Top10</view>
        </view>
        <view class='container'>
            <view class='row br'>
                <view class='list-num'>1</view>
                <view class='list-content'>陈思静</view>
                <view class='list-total'>26</view>
            </view>
            <view class='row br'>
                <view class='list-num'>2</view>
                <view class='list-content'>许黎明</view>
                <view class='list-total'>24</view>
            </view>
            <view class='row br'>
                <view class='list-num'>3</view>
                <view class='list-content'>王凯</view>
                <view class='list-total'>22</view>
            </view>
            <view class='row'>
                <view class='list-num'>4</view>
                <view class='list-content'>徐娘</view>
                <view class='list-total'>20</view>
            </view>
        </view>
    </view>
    <view class='box'>
        <view class='title-box'>
            <view class='title-icon'></view>
            <view class='title'>事故柱形图</view>
        </view>
        <view class='tab'>
            <view class='tab-left {{type == 0? "tab-active":"tab-default"}}' bindtap='changeChartType' data-id='0'>事故次数</view>
            <view class='tab-right {{type == 1? "tab-active":"tab-default"}}' bindtap='changeChartType' data-id='1'>死亡人数</view>
        </view>
        <view class='tab01 {{type == 0?"":"hidden"}}'>
            <canvas canvas-id="accidentColumn" style='width:350px;height:300px;margin:0 auto;'></canvas>
        </view>
        <view class='tab02 {{type == 1?"":"hidden"}}'>
            <canvas canvas-id="diedNumColumn" style='width:350px;height:300px;margin:0 auto;'></canvas>
        </view>
    </view>

    <view class='box'>
        <view class='title-box'>
            <view class='title-icon'></view>
            <view class='title'>路长同期对比图</view>
        </view>
        <view class='road-box'>
            <view class='select-road'>
                <picker bindchange="bindRoadChange" value="{{index}}" range='{{array}}'>
                    <view class="picker roadPicker">{{array[index]}}</view>
                    <view class='drop'><image src='../../image/icon-drop-down.png'></image></view>
                </picker>
            </view>
        </view>
        <view class='trend'>
            <canvas canvas-id="trendLine" style='width:350px;height:300px;margin:0 auto;'></canvas>
        </view>
    </view>
</view>