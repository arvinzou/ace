.index{
    width: 100%;
    height: 100%;
    background: #FCFCFC;
}
.form{
    width: 82%;
    height: auto;
    padding-left: 4%;
    padding-right: 4%;
    margin-left: 5%;
    background: #FFFFFF;
    margin-top: 40rpx;
}
.header-box{
    width: 100%;
    height: 150rpx;
}
.header-box::after{
    content: '';
    clear: both;
    display: block;
}
.header{
    width: 80rpx;
    height: 80rpx;
    margin-top: 35rpx;
    float: left;
    margin-right: 32rpx;
}
.header image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.opt-title{
    width: auto;
    height: 150rpx;
    float: left;
    line-height: 150rpx;
    color: #373F53;
    font-size: 32rpx;
    font-weight: bold;
}
.opt{
    width: auto;
    height: 150rpx;
    line-height: 150rpx;
    float: right;
}
.opt image{
    width: 15rpx;
    height: 26rpx;
}
.row{
    width: 100%;
    height: 110rpx;
}
.row::after{
    content: '';
    clear: both;
    display: block;
}
.form-title{
    width: 25%;
    height: 110rpx;
    line-height: 110rpx;
    float: left;
    color: #373F53;
    font-size: 32rpx;
}
.form-input{
    width: 75%;
    height: 110rpx;
    float: left;
}
.form-input input{
    width: 100%;
    height: 100%;
    text-align: right;
    color: #373F53;
    font-weight: bold;
    font-size: 30rpx;
}
.br{
    border-bottom: 1px solid #F0EFF6;
}
.save{
    width: 80%;
    height: 110rpx;
    line-height: 110rpx;
    text-align: center;
    border-radius: 55rpx;
    border: 1px solid #366AE1; 
    position: fixed;
    bottom: 108rpx;
    left: 10%;
    color: #366AE1;
    font-size: 36rpx;
}