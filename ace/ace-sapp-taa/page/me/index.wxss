.index{
    width: 100%;
    height: 100%;
}
.banner{
    width: 100%;
    height: 425rpx;
    background: #2932BD;
    color: #FFFFFF;
}
.header-box{
    width: 137rpx;
    height: 137rpx;
    margin: 0 auto;
    padding-top: 38rpx;
    padding-bottom: 20rpx;
}
.header{
    width: 137rpx;
    height: 137rpx;
    border-radius: 50%;
}
.info-box{
    width: auto;
    height: auto;
    text-align: center;
}
.name{
    font-size: 58rpx;
    font-weight: bold;
    padding-left: 80rpx;
}
.icon-edit{
    width: 40rpx;
    height: 40rpx;
    margin-left: 45rpx;
}
.cardNo{
    font-size: 32rpx;
}
.menu{
    width: 90%;
    height: auto;
    margin-left: 5%;
    margin-right: 5%;
    margin-top: -62rpx;
}
.menu-item{
    width: 100%;
    height: 148rpx;
    background:rgba(255,255,255,1);
    box-shadow:0rpx 6rpx 21rpx 0rpx rgba(205,205,205,0.2);
    border-radius:10rpx;
    margin-bottom: 30rpx;
}
.menu-item::after{
    content: '';
    clear: both;
    display: block;
}
.menu-left{
    width: auto;
    height: 148rpx;
    line-height: 148rpx;
    float: left;
}
.menu-right{
    width: auto;
    height: 148rpx;
    line-height: 148rpx;
    float: right;
    text-align: right;
    padding-right: 40rpx;
}
.menu-title{
    color: #373F53;
    font-size: 40rpx;
    font-weight: bold;
}
.number{
    color: #ABAEB9;
    font-size: 34rpx;
    font-weight: bold;
}
.menu-icon{
    width: 57rpx;
    height: 57rpx;
    float: left;
    margin-top: 45.5rpx;
    margin-left: 42rpx;
    margin-right: 30rpx;
}
.menu-icon image{
    width: 100%;
    height: 100%;
}
.icon-redirect{
    width: 15rpx;
    height: 26rpx;
    margin-left: 22rpx;
}
.footer{
    width: 80%;
    height: auto;
    position: fixed;
    bottom: 0;
    margin: 39rpx 10%;
    text-align: center;
}
.footer button{
    width: 100%;
    height: 110rpx;
    line-height: 110rpx;
    border-radius: 55rpx;
    border: 1px solid #D7D9DF;
    color: #373F53;
    font-size: 36rpx;
    background: #FFFFFF;
    outline: none;
}