@import "../common/lib/weui.wxss";

.index{width: 100%;}
.flex-wrp {display: flex;}
.flex-item{width: 33.33%;text-align: center;}
.section_title{color: #25324e; font-size: 32rpx;font-weight: bolder; padding-left: 30rpx; height: 40rpx;line-height:40rpx;margin-bottom: 40rpx;}
.caseNum{color: #3c82fc; font-size: 32rpx; font-weight:  bolder;}
.caseTitle{color: #798092; font-size: 30rpx; font-weight: bolder;}
.deadline{color: #798092; text-align: center; font-size: 20rpx;}
.num{margin-top: 20rpx; margin-bottom: 20rpx;}
.day{margin-left: 27.5%; border: 1rpx solid #E4E6E9;border-top-left-radius: 15rpx;border-bottom-left-radius: 15rpx;}
.month{border: 1rpx solid #E4E6E9;}
.quarter{margin-right: 27.5%;border: 1rpx solid #E4E6E9;border-top-right-radius: 15rpx;border-bottom-right-radius: 15rpx;}
.canvas{width: 100%;}
.table {
  border: 0px solid darkgray;
  color: #798092;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}
.td {
    width:25%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background-color: #F7F9FC;
}
.bg-g{
  background: #FFFFFF;
}
.th {
  width: 25%;
  justify-content: center;
  background: #ECF0F1;
  color: #616161;
  display: flex;
  height: 2rem;
  align-items: center;
}
.swiper-tab{
  display: flex;
  width: 100%;
  text-align: center;
  height: 30rpx;
  line-height: 30rpx;
  font-weight: bold;
  margin-bottom: 50rpx;
}
.swiper-tab-item{
  width: 15%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: white;
}
.active{
  background-color:#3c82fc;
  color: white; 
}
.tabContent{
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}
.gap{
  width: 100%;
  height: 20rpx;
  background-color: #F7F9FC
}
.canvasContainer{width: 100%; height: 300rpx; margin-top: 50rpx;}