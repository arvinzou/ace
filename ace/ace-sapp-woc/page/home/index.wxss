@import "../common/lib/weui.wxss";

.index{width: 100%;}
.flex-wrp {display: flex;}
.flex-item{width: 33.33%;text-align: center;}
.section{width: 100%;height: 300rpx; background-color: #FFFFFF;}
.site{width: 100%; height: 450rpx;background-color: #FFFFFF;}
.section_title_1{color: #25324e; font-size: 32rpx;font-weight: bolder; padding-left: 30rpx; height: 40rpx;line-height:40rpx;margin-bottom: 40rpx;padding-top: 20rpx;}
.section_title{color: #25324e; font-size: 32rpx;font-weight: bolder; padding-left: 30rpx; height: 40rpx;line-height:40rpx;margin-bottom: 40rpx;margin-top: 40rpx;padding-top: 20rpx;}
.caseNum{color: #3c82fc; font-size: 32rpx; font-weight:  bolder;}
.caseTitle{color: #798092; font-size: 30rpx; font-weight: bolder;}
.deadline{color: #798092; text-align: center; font-size: 20rpx;}
.num{margin-top: 20rpx; margin-bottom: 20rpx;}
.day{margin-left: 27.5%; border: 1rpx solid #E4E6E9;border-top-left-radius: 15rpx;border-bottom-left-radius: 15rpx;}
.month{border: 1rpx solid #E4E6E9;}
.quarter{margin-right: 27.5%;border: 1rpx solid #E4E6E9;border-top-right-radius: 15rpx;border-bottom-right-radius: 15rpx;}
.canvas{width: 100%;}
.table {
  border: 0px solid darkgray;
  color: #798092;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 60rpx;
  line-height: 60rpx;
  align-items: center;
}
.td {
    justify-content: center;
    text-align: center;
    font-size: 26rpx;
}
.bg-w{
  background-color: #F7F9FC;
}
.bg-g{
  background: #FFFFFF;
}
.bg-o{
    background: #F7F9FC;
}
.th {
  justify-content: center;
  background: #ECF0F1;
  color: #616161;
  display: flex;
  height: 2rem;
  align-items: center;
}
.swiper-tab{
  color: #798092;
  display: flex;
  width: 100%;
  text-align: center;
  height: 30rpx;
  line-height: 30rpx;
  font-weight: bold;
  margin-bottom: 50rpx;
}
.swiper-tab-item{
  width: 15%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: white;
}
.active{
  background-color:#3c82fc;
  color: white; 
}
.tabContent{
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  background-color: #FFFFFF;
}
.canvasContainer{width: 100%; height: 300rpx; margin-top: 50rpx;}
.picker{
    padding: 13px;
    background-color: #FFFFFF;
}
.loading{  
  padding: 10rpx;  
  text-align: center;  
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;  
  background-image: url(../../image/load.png) no-repeat;  
  background-size: contain;  
  animation: rotate 1s linear infinite;  
}  
.loading.complete:before{  
  display: none;  
}  