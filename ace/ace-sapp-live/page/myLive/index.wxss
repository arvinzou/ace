.touch-item {
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
  background: #fff;
  margin-bottom: 20rpx;
}
.content {
  width: 100%;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(150rpx);
  transform: translateX(150rpx);
  margin-left: -150rpx;
  padding: 30rpx;
}
.opt {
  width: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(150rpx);
  transform: translateX(150rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
 background: #1a9fff;
}
.touch-move-active .content,
.touch-move-active .opt {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
