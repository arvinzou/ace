<view class="index">
  <view class="index-bd">
    <view class="kind-list">
      <view class="kind-list-item">
        <view style="flex-direction:column;">
          <view class="text-content" style="flex-direction:column;">
            <view class="title-strong-big2"> {{o.title}}</view>

            <view class="item-text"> 提交时间：{{o.submitTime}}</view>
            <view class="item-text"> 企业单位：{{o.companyName}}</view>
            <view class="item-text"> 提交人员：{{o.submitName}}</view>
            <view class="item-text"> 联系电话：{{o.tel}}</view>
          </view>
          <view class="text-line"></view>
          <view class="text-content">
            <rich-text style="text-indent:0px;" nodes="{{o.content}}"></rich-text>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="index-bd">
    <view class="kind-list">
      <block wx:for-items="{{o.list}}" wx:for-item="file" wx:key="*item">
        <view class="kind-list-item" wx:if="{{file.type==1}}">
          <navigator bindtap="previewImage" data-url="{{file.mediUrl}}">
            <view style="flex-direction:column;">
              <image src="{{file.mediUrl}}" class="swiper" mode="aspectFill" />
              <view class="text-content-center" style="flex-direction:column;">
                <view class="title-strong-big2"> {{file.name}}</view>
              </view>
            </view>
          </navigator>
        </view>
      </block>
    </view>
  </view>

  <view class="index-bd" wx:if="{{o.status==3}}">
    <view class="kind-list">
      <view class="kind-list-item">
        <view style="flex-direction:column;">
          <view class="text-content" style="flex-direction:column;">
            <view class="title-strong-big2">答复内容</view>
            <view class="item-text"> 答复时间：{{o.answerTime}}</view>
            <view class="item-text"> 处理科室：{{o.answerDept}}</view>
          </view>
          <view class="text-line"></view>
          <view class="text-content">
            <rich-text style="text-indent:0px;" nodes="{{o.answerContent}}"></rich-text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class="index-bd" wx:if="{{o.status==3}}">
    <view class="kind-list">
      <block wx:for-items="{{o.list}}" wx:for-item="file" wx:key="*item">
        <view class="kind-list-item" wx:if="{{file.type==2}}">
          <navigator bindtap="previewImage" data-url="{{file.mediUrl}}">
            <view style="flex-direction:column;">
              <image src="{{file.mediUrl}}" class="swiper" mode="aspectFill" />
              <view class="text-content-center" style="flex-direction:column;">
                <view class="title-strong-big2"> {{file.name}}</view>
              </view>
            </view>
          </navigator>
        </view>
      </block>
    </view>
  </view>

</view>