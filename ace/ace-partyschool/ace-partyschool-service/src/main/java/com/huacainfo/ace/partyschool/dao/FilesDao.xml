<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huacainfo.ace.partyschool.dao.FilesDao">
    <resultMap id="BaseResultMap" type="com.huacainfo.ace.partyschool.model.Files">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="category" jdbcType="CHAR" property="category"/>
        <result column="classesId" jdbcType="VARCHAR" property="classesId"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="pushDate" jdbcType="TIMESTAMP" property="pushDate"/>
        <result column="publisher" jdbcType="VARCHAR" property="publisher"/>
        <result column="status" jdbcType="CHAR" property="status"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, category, classesId, title, url, pushDate, publisher, status
    </sql>
    <select id="selectByPrimaryKey" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from files
        where title = #{title,jdbcType=VARCHAR}
    </select>
    <delete id="deleteByPrimaryKey" parameterType="java.lang.String">
        delete from files
        where id = #{id,jdbcType=VARCHAR}
    </delete>
    <insert id="insert" parameterType="com.huacainfo.ace.partyschool.model.Files">
        insert into files (id, category, classesId,
        title, url, pushDate,
        publisher, status)
        values (#{id,jdbcType=VARCHAR}, #{category,jdbcType=CHAR}, #{classesId,jdbcType=VARCHAR},
        #{title,jdbcType=VARCHAR}, #{url,jdbcType=VARCHAR}, #{pushDate,jdbcType=TIMESTAMP},
        #{publisher,jdbcType=VARCHAR}, #{status,jdbcType=CHAR})
    </insert>
    <update id="updateByPrimaryKey" parameterType="com.huacainfo.ace.partyschool.model.Files">
        update files
        set category = #{category,jdbcType=CHAR},
        classesId = #{classesId,jdbcType=VARCHAR},
        title = #{title,jdbcType=VARCHAR},
        url = #{url,jdbcType=VARCHAR},
        pushDate = #{pushDate,jdbcType=TIMESTAMP},
        publisher = #{publisher,jdbcType=VARCHAR},
        status = #{status,jdbcType=CHAR}
        where id = #{id,jdbcType=VARCHAR}
    </update>

    <resultMap id="VoResultMap" extends="BaseResultMap" type="com.huacainfo.ace.partyschool.vo.FilesVo">

    </resultMap>


    <sql id="Vo_Column_List">
        id, category, classesId, title, url, pushDate, publisher, status
    </sql>
    <sql id="From_Statement">
        FROM files f
    </sql>
    <sql id="Where_Condition">
        where 1 = 1
        <if test="condition.title !=null and condition.title !=&quot;&quot;">
            and f.title = #{condition.title,jdbcType=VARCHAR}
        </if>
        <if test="condition.classesId !=null and condition.classesId !=&quot;&quot;">
            and f.classesId = #{condition.classesId,jdbcType=VARCHAR}
        </if>
        <if test="condition.category !=null and condition.category !=&quot;&quot;">
            and f.category = #{condition.category,jdbcType=VARCHAR}
        </if>
    </sql>

    <select id="selectVoByPrimaryKey" parameterType="java.lang.String" resultMap="VoResultMap">
        select
        t.id,
        t.category,
        c.name as classesId,
        t.title,
        t.url,
        t.pushDate,
        t.publisher,
        t.STATUS
        from files t
        LEFT JOIN classes c on c.id=t.classesId
        where t.id = #{id,jdbcType=VARCHAR}
    </select>

    <select id="findList" parameterType="java.lang.String" resultMap="VoResultMap">
        select
        f.id,
        f.category,
        c.name as classesId,
        f.title,
        f.url,
        f.pushDate,
        f.publisher,
        f.STATUS
        <include refid="From_Statement"/>
        LEFT JOIN classes c on c.id=f.classesId
        <include refid="Where_Condition"/>
        <choose>
            <when test="orderBy!=null and orderBy!=&quot;&quot;">
                ORDER BY ${orderBy}
            </when>
            <otherwise>
                ORDER BY f.pushDate desc
            </otherwise>
        </choose>
        limit #{start,jdbcType=DECIMAL}, #{limit,jdbcType=DECIMAL}
    </select>

    <select id="findCount" resultType="int">
        SELECT COUNT(*)
        <include refid="From_Statement"/>
        <include refid="Where_Condition"/>
    </select>

    <select id="isExit" resultType="int" parameterType="com.huacainfo.ace.partyschool.model.Files">
        select count(*)
        from files
        where
        title=#{title}
    </select>

    <update id="updateStatus" parameterType="java.lang.String">
        update files
        set status = #{status,jdbcType=CHAR}
        where id = #{id,jdbcType=VARCHAR}
    </update>

    <resultMap id="StudentFilesResultMap" type="com.huacainfo.ace.partyschool.vo.FilesVo">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="category" jdbcType="CHAR" property="category"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="pushDate" jdbcType="TIMESTAMP" property="pushDate"/>
        <result column="publisher" jdbcType="VARCHAR" property="publisher"/>
        <result column="status" jdbcType="CHAR" property="status"/>
        <result column="classesId" jdbcType="CHAR" property="classesId"/>
        <association property="student" column="student" javaType="com.huacainfo.ace.partyschool.model.Student">
            <id column="sId" jdbcType="VARCHAR" property="id"/>
            <result column="pid" jdbcType="VARCHAR" property="pid"/>
            <result column="name" jdbcType="VARCHAR" property="name"/>
            <result column="mobile" jdbcType="VARCHAR" property="mobile"/>
            <result column="idCard" jdbcType="CHAR" property="idCard"/>
            <result column="political" jdbcType="VARCHAR" property="political"/>
            <result column="workUnitName" jdbcType="VARCHAR" property="workUnitName"/>
            <result column="postName" jdbcType="VARCHAR" property="postName"/>
            <result column="classId" jdbcType="VARCHAR" property="classId"/>
        </association>
    </resultMap>

    <select id="findStudentFileList" parameterType="java.lang.String" resultMap="StudentFilesResultMap">
        select
        f.id, f.category, f.classesId, f.title, f.url, f.pushDate, f.publisher, f.status,
        s.id as sId ,s.mobile, s.idCard, s.name, s.pid, s.political, s.workUnitName, s.classId
        FROM partyschool.files f
        LEFT JOIN partyschool.student s on s.classId=f.classesId
        where
        f.classesId=(
        SELECT s.classId FROM partyschool.student s WHERE s.id=#{condition.userId,jdbcType=VARCHAR}
        )
        <if test="condition.title !=null and condition.title !=&quot;&quot;">
            and f.`title` like concat('%',#{condition.title,jdbcType=VARCHAR},'%')
        </if>
        <choose>
            <when test="orderBy!=null and orderBy!=&quot;&quot;">
                ORDER BY ${orderBy}
            </when>
            <otherwise>
                ORDER BY f.pushDate desc
            </otherwise>
        </choose>
        limit #{start,jdbcType=DECIMAL}, #{limit,jdbcType=DECIMAL}
    </select>

    <resultMap id="TeacherFilesResultMap" type="com.huacainfo.ace.partyschool.vo.FilesVo">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="category" jdbcType="CHAR" property="category"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="pushDate" jdbcType="TIMESTAMP" property="pushDate"/>
        <result column="publisher" jdbcType="VARCHAR" property="publisher"/>
        <result column="status" jdbcType="CHAR" property="status"/>
        <result column="classesId" jdbcType="CHAR" property="classesId"/>
        <association property="teacher" column="teacher" javaType="com.huacainfo.ace.partyschool.model.Teacher">
            <id column="tId" jdbcType="VARCHAR" property="id"/>
            <result column="name" jdbcType="VARCHAR" property="name"/>
            <result column="mobile" jdbcType="VARCHAR" property="mobile"/>
            <result column="idCard" jdbcType="CHAR" property="idCard"/>
            <result column="workUnitName" jdbcType="VARCHAR" property="workUnitName"/>
            <result column="postName" jdbcType="VARCHAR" property="postName"/>
            <result column="introduce" jdbcType="VARCHAR" property="introduce"/>
            <result column="category" jdbcType="VARCHAR" property="category"/>
            <result column="photoUrl" jdbcType="VARCHAR" property="photoUrl"/>
        </association>

    </resultMap>

    <select id="findTeacherFileList" parameterType="java.lang.String" resultMap="TeacherFilesResultMap">
        select
        f.id, f.category, f.classesId, f.title, f.url, f.pushDate, f.publisher, f.status,
        t.id as tId, t.idCard, t.mobile, t.introduce, t.name, t.workUnitName, t.category, t.photoUrl, t.postName
        FROM files f
        LEFT JOIN teacher_cls_ship s ON s.clsId=f.classesId
        LEFT JOIN teacher t ON t.id=s.teacherId
        where
        f.classesId in(
        SELECT s.clsId FROM teacher_cls_ship s WHERE s.teacherId=#{condition.userId,jdbcType=VARCHAR}
        )
        <if test="condition.title !=null and condition.title !=&quot;&quot;">
            and f.`title` like concat('%',#{condition.title,jdbcType=VARCHAR},'%')
        </if>
        <choose>
            <when test="orderBy!=null and orderBy!=&quot;&quot;">
                ORDER BY ${orderBy}
            </when>
            <otherwise>
                ORDER BY f.pushDate desc
            </otherwise>
        </choose>
        limit #{start,jdbcType=DECIMAL}, #{limit,jdbcType=DECIMAL}
    </select>
</mapper>