    <select id="selectEvaluatTplTreeList" resultType="map">
        <if test="pid==0">
            SELECT
            *
            FROM
            (SELECT
            t.id ID,
            '0' PID,
            t.name TEXT,
            'closed' STATE,
            '' SRC,
            '' ICON,
            '' HREF,
            '1' CHILD_COUNT
            FROM
            evaluat_tpl t
            WHERE
            t.syid=#{syid}
            ORDER BY t.createDate) a
