.kind-list-item{
  padding: 10px;
}
.weui-btn {
  margin-top: 15px;
  border-radius: 2px;
}
.iconList20{
  width:20px; height: 20px;
  padding-right: 10rpx;
  vertical-align: top;
}
.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 6vh;
    line-height: 6vh;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}
.swiper-tab-item{
    width: 33.3%; 
    color:#434343;
}
.active{
    color:#F65959;
    border-bottom: 4rpx solid #F65959;
}
swiper{
  margin: 5rpx;
}
.hide{
 display: none;
}
.show{ 
 display: block;
}

.circle{
  align-items: center;  
  justify-content: center; 
  width: 250rpx;  
  height:250rpx;  
  border-radius: 50%;  
  font-size: 36rpx;  
  background: #C8C8C8;  
}
.playimg{
  width: 200rpx;
  height: 200rpx;
  margin: 25rpx;
}
.recorder-box{
  display: flex;
  justify-content: center;
  padding: 10rpx;
}

.btn-img-small {
  position:absolute;
  width: 40rpx;
  height: 40rpx;
  right:3rpx;
  top:3rpx;
  background: #fff;
  border-radius: 50%;
}