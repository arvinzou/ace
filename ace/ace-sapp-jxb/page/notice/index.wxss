@import "../common/index.wxss";
@import "../common/lib/weui.wxss";
.reg-top{
  background: #fff;
  flex-direction:column;
  padding: 10px;
}
.reg-title{
  font-size: 18px;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.reg-icon{
  width:42px; 
  height: 42px; 
}
.reg-logo-panel{
    display: flex;
    align-items: center;
    justify-content: center;
}
.reg-logo-text{
  line-height: 42px;
  padding-left: 8px;
}
.reg-tabbar{
  height: 50rpx;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 13px;
}
.reg-tabbar-login{
  background: #fff;
  height: 22px;
  padding:6px;
  padding-right:20px;
  padding-left:20px;
  border-bottom-left-radius: 22px;
  border-top-left-radius: 22px; 
  align-items: center;
  justify-content: center;
}
.reg-tabbar-reg{
  background: #fff;
  height: 22px;
  padding:6px;
  padding-right:20px;
  padding-left:20px;
  border-bottom-right-radius: 22px;
  border-top-right-radius: 22px; 
  align-items: center;
  justify-content: center;
}
.reg-tabbar-add{
  background: #eeeeee;
  height: 22px;
  padding:6px;
  padding-right:20px;
  padding-left:20px;
  align-items: center;
  justify-content: center;
}
.reg-tabbar-center{
  background: #eeeeee;
  height: 22px;
  padding:6px;
  padding-right:20px;
  padding-left:20px;
  align-items: center;
  justify-content: center;
}
.tab-active{
  color: #fff;
   background: green;
}
.kind-list-item{
  padding: 10px;
}
.weui-btn {
  margin-top: 15px;
  border-radius: 2px;
}
.reg-remark{
  font-size: 14px;
  padding: 5px;
}
.weui-flex__item-body{
  line-height: 25px;
}

.bd{
  background: #fff;
  flex-direction:column;
}
.column{
  flex-direction:column;
}
.row{
  flex-direction:row;
}
.checkbox {
	width: 100px;
	float: left;
	margin: 1px 5px 5px;
}
.checkbox-title {
	float: left;
	margin: 1px 1px 1px;
}
.kind-list-item-hd {
  padding: 8rpx;
  display: flex;
  align-items: center;
  transition: opacity .3s;
 
}
.kind-list-item {
  margin: 10rpx 0;
  background-color: #FFFFFF;
  border-radius: 4rpx;
  overflow: hidden;
}
.kind-list-item-open {
  margin: 10rpx 0;
  padding: 20rpx;
  border-radius: 4rpx;
  overflow: hidden;
  opacity: 1;
  background-color: #fff;
}
.dataItem{
  width: 60px;
	float: left;
	margin: 3px 3px 3px;
  border-radius: 10rpx;
  color: #fff;
  background-color: green;
}