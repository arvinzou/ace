}

.content_end {
    background: white;
    display: table;
    position: relative;
    width: 686rpx;
    padding: 34rpx 32rpx;
    
}

.content_end_text {
    display: inline-table;
    vertical-align: top;
    width: 440rpx;
    font-weight: bold;
}



.flag {
    position: absolute;
    left: 580rpx;
    top: 84rpx;
    width: 102rpx;
    height: 83rpx;
}

.flagImg {
    width: 102rpx;
    height: 83rpx;
}



/* 加载状态样式 */
.loading {
    width: 686rpx;
    text-align: center;
    margin-top: 20rpx;
}

.loading:before {
    display: inline-block;
    margin-right: 5rpx;
    vertical-align: middle;
    content: '';
    width: 40rpx;
    height: 40rpx;
    background-image: url(../../image/loading.png) no-repeat;
    background-size: contain;
    animation: rotate 1s linear infinite;
}

.loading.complete:before {
    display: none;
}
