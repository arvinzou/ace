.ing {
    padding: 110rpx 32rpx 0 32rpx;
    width: 718rpx;
    height: 100%;
}

.content {
    width: 638rpx;
    background-color: white;
    padding: 24rpx;
    margin-bottom: 40rpx;
}

.content_img {
    width: 638rpx;
    height: 360rpx;
}

.cover {
    width: 638rpx;
    height: 360rpx;
}

.icon_icon {
    width: 26rpx;
    margin-right: 18rpx;
}

.msg {
    margin-top: 14rpx;
}

.title {
    width: 638rpx;
    font-size: 32rpx;
    color: #222;
    font-weight: bold;
    margin: 25rpx 0 8rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

