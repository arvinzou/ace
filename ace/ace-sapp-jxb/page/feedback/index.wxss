@import "../common/index.wxss";
@import "../common/lib/weui.wxss";
.reg-top{
  background: #fff;
  flex-direction:column;
  padding: 20px;
}
.reg-title{
  font-size: 18px;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 10px;
}
.reg-icon{
  width:42px; 
  height: 42px; 
}
.reg-logo-panel{
    display: flex;
    align-items: center;
    justify-content: center;
}
.reg-logo-text{
  line-height: 42px;
  padding-left: 8px;
}
.reg-tabbar{
  height: 50rpx;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 13px;
}
.reg-tabbar-login{
  background: #fff;
  height: 22px;
  padding:6px;
  padding-right:20px;
  padding-left:20px;
  border-bottom-left-radius: 22px;
  border-top-left-radius: 22px; 
  align-items: center;
  justify-content: center;
}
.reg-tabbar-reg{
  background: #fff;
  height: 22px;
  padding:6px;
  padding-right:20px;
  padding-left:20px;
  border-bottom-right-radius: 22px;
  border-top-right-radius: 22px; 
  align-items: center;
  justify-content: center;
}
.tab-active{
  color: #fff;
   background: green;
}
.kind-list-item{
  padding: 10px;
}
.weui-btn {
  margin-top: 15px;
  border-radius: 2px;
}
.reg-remark{
  font-size: 14px;
  padding: 5px;
}
.weui-flex__item-body{
  line-height: 25px;
}
.iconList20{
  width:20px; height: 20px;
  padding-right: 10rpx;
  vertical-align: top;
  
}

.page-body-info {
  padding-bottom: 0;
  height: 100px;
}
.userinfo-avatar {
  border-radius: 128rpx;
  width: 128rpx;
  height: 128rpx;
}
.userinfo-nickname {
  margin-top: 20rpx;
}

