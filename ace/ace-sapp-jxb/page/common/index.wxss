.index{
  color: 	#7A7E83;
}

.kind-list-item {
  margin: 10rpx 0;
  background-color: #FFFFFF;
  border-radius: 4rpx;
  overflow: hidden;
}
.kind-list-item-open {
  margin: 10rpx 0;
  border-radius: 4rpx;
  overflow: hidden;
  opacity: 1;
  background-color: #fff;
}
.kind-list-item:first-child {
  margin-top: 0;
}
.kind-list-text{
  flex: 1;
}
.kind-list-img {
  width: 30rpx;
  height: 30rpx;
}
.kind-list-item-hd {
  padding: 20rpx;
  display: flex;
  align-items: center;
  transition: opacity .3s;
 
}
.kind-list-item-hd-show {
  opacity: 1;
  font-weight: 800;
  font-size: 16px;
 
}
.kind-list-item-bd {
  height: 0;
  overflow: hidden;


}
.kind-list-item-bd-show {
  height: auto;
}