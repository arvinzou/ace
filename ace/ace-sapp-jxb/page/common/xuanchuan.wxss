}
.medialong{
    display: inline-block;
    margin-right: 24rpx;
    width: 300rpx;

}

.media{
    display: inline-block;
    margin-right: 24rpx;
    width: 200rpx;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}

/* 加载状态样式 */
.loading {
    width: 686rpx;
    padding: 20rpx 32rpx 0rpx 32rpx;
    text-align: center;
    font-size: 24rpx;
}

.loading:before {
    display: inline-block;
    margin-right: 5rpx;
    vertical-align: middle;
    content: '';
    width: 40rpx;
    height: 40rpx;
    background-image: url(../../image/loading.png) no-repeat;
    background-size: contain;
    animation: rotate 1s linear infinite;
}

.loading.complete:before {
    display: none;
}