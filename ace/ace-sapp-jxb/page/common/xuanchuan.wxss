page{
    background-color: #f4f4f4;
}

.index-bd {
    color: #999;
}
.content {
    background-color: white;
    width: 686rpx;
    padding: 36rpx 32rpx;
}

.title {
    width: 100%; 
    color: #222;
    font-weight: bold;
    font-size: 32rpx;
    margin-bottom: 20rpx;

}
.titleplus{
   min-height: 95rpx;
}

.remark {
    width: 100%;
    font-size: 26rpx;  
}

span {
    vertical-align: bottom; 
}

.time {
    color: #999;
    float: right;
    margin: 0rpx;
}

.image {
    vertical-align: top;
    height: 142rpx;
    width: 214rpx;
    display: inline-block;
    margin-top:6rpx;
