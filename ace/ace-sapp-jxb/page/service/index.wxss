page {
  background-color: #fff;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}
.weui-search-bar {
  position: relative;
  padding-left:10px;
  padding-right:10px;
  padding-top:2px;
  padding-bottom:2px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 0rpx solid #fff;
  border-bottom: 0rpx solid #fff;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  border-radius: 2px;
  background: #FFFFFF;
  border: 0rpx solid #E6E6EA;
}
.weui-search-bar__input {
  height: 35px;
  line-height: 35px;
  font-size: 14px;
}
.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 35px;
  color: #09BB07;
  white-space: nowrap;
}