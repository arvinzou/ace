.weui-grids-nav {
  overflow: hidden;
}
.weui-grid-nav {
  position: relative;
  float: left;
  padding: 10px;
  padding-top: 5px;
  width: 16.66%;
  box-sizing: border-box;
}
.weui-grid_active-nav {
  background-color: #ECECEC;
}
.weui-grid__icon-nav {
  display: block;
  width: 28px;
  height: 28px;
  margin: 0 auto;
}
.weui-grid__label-nav {
  margin-top: 5px;
  display: block;
  text-align: center;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.controls {
  position: relative;
  height: 30px;
  width:  30px;
  padding: 3px;
  margin-top: 10px;
  margin-left: 88%;
  margin-right: 20rpx;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 2px;
  opacity: 0.9;
