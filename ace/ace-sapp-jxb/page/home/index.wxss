.navbar {
   /* z-index: 100;*/
    width: 100%;
    /*position: fixed; */
    font-weight: bold;
    font-size: 32rpx;
    color: #666;
    flex: none;
    display: flex;
    background: #fff;
    border-bottom: 1px #e5e5e5 solid;
}

.navbar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 80rpx;
}

.navbar .item.active {
    font-size: 34rpx;
    color: #d83e3f;
}

.navbar .item.active:after {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 6rpx;
    width: 60rpx;
    margin: 0 auto;
    background: #d83e3f;
    border-radius: 10%;
}
.active {
  color:#F65959;
  border-bottom:4rpx solid #fff;
}
.navbar-content{
  padding: 20rpx;
}
.live-list{
  position: relative;
}
.live-item{
    position: relative;
    margin-bottom: 20rpx;
    height: 450rpx;
    overflow: hidden;
}

.coverImg{
 width: 100%;
 height: 400rpx;
 border-radius: 10rpx;
}

.live-title{
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    padding: 10rpx 15rpx 10rpx;
    background:#000;
    color: #fff;
}

.touch-item {
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
  margin-bottom: 20rpx;
  height: 450rpx;
}
.content {
  width: 100%;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(150rpx);
  transform: translateX(150rpx);
  margin-left: -150rpx
}
.opt {
  width: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(150rpx);
  transform: translateX(150rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.touch-move-active .content,
.touch-move-active .opt {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
.opt-btn{
  width:  150rpx;
  height: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 3rpx;
}
.btn-del{
  background-color: orangered;
  margin-top: 3rpx;
}

.btn-live{
  background-color: blue;
}
.btn-edit{
  background-color: green;
  margin-bottom: 3rpx;
}
