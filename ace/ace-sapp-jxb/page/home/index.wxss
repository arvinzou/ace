.navbar {
   /* z-index: 100;*/
    width: 100%;
    /*position: fixed; */
    font-weight: bold;
    font-size: 32rpx;
    color: #666;
    flex: none;
    display: flex;
    background: #fff;
    border-bottom: 1px #e5e5e5 solid;
}

.navbar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 80rpx;
}

.navbar .item.active {
    font-size: 34rpx;
    color: #d83e3f;
}

.navbar .item.active:after {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 6rpx;
    width: 60rpx;
    margin: 0 auto;
    background: #d83e3f;
    border-radius: 10%;
}
.active {
  color:#F65959;
  border-bottom:4rpx solid #fff;
}
.navbar-content{
  padding: 20rpx;
}
